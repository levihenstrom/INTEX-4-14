        <script>
    // Hero video play/pause toggle
    const heroVideo = document.querySelector('.hero-video-bg');
    const toggleBtn = document.getElementById('heroVideoToggle');
    const icon = toggleBtn.querySelector('i');

    toggleBtn.addEventListener('click', () => {
        if (heroVideo.paused) {
            heroVideo.play();
            icon.classList.remove('fa-play');
            icon.classList.add('fa-pause');
        } else {
            heroVideo.pause();
            icon.classList.remove('fa-pause');
            icon.classList.add('fa-play');
        }
    });

    // ========== SCROLL ANIMATIONS ==========
    const scrollObserverOptions = {
        threshold: 0.15,
        rootMargin: '0px 0px -50px 0px'
    };

    // Observer for cards and elements
    const scrollAnimationObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animated');
                scrollAnimationObserver.unobserve(entry.target);
            }
        });
    }, scrollObserverOptions);

    // Observe all impact cards
    document.querySelectorAll('.impact-card').forEach(card => {
        scrollAnimationObserver.observe(card);
    });

    // Observe sponsor marquee
    const sponsorMarquee = document.querySelector('.sponsors-marquee');
    if (sponsorMarquee) scrollAnimationObserver.observe(sponsorMarquee);

    // Observe all event cards
    document.querySelectorAll('.event-card').forEach(card => {
        scrollAnimationObserver.observe(card);
    });

    // Observe all bento items (photos + testimonials)
    document.querySelectorAll('.bento-item').forEach(item => {
        scrollAnimationObserver.observe(item);
    });

    // ========== NUMBER COUNTER ANIMATION ==========
    const numberObserverOptions = {
        threshold: 0.5,
        rootMargin: '0px'
    };

    const animateNumbers = (entries, observer) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const numbers = entry.target.querySelectorAll('.impact-number');
                numbers.forEach(num => {
                    const target = num.innerText;
                    const isPrice = target.includes('$');
                    const cleanNum = parseInt(target.replace(/[^0-9]/g, ''));
                    let current = 0;
                    const increment = cleanNum / 50;
                    const timer = setInterval(() => {
                        current += increment;
                        if (current >= cleanNum) {
                            num.innerText = target;
                            clearInterval(timer);
                        } else {
                            num.innerText = isPrice 
                                ? '$' + Math.floor(current).toLocaleString()
                                : Math.floor(current).toLocaleString();
                        }
                    }, 30);
                });
                observer.unobserve(entry.target);
            }
        });
    };

    const impactObserver = new IntersectionObserver(animateNumbers, numberObserverOptions);
    const impactSection = document.querySelector('.impact-container');
    if (impactSection) impactObserver.observe(impactSection);

    // ========== SMOOTH SCROLL FOR INTERNAL LINKS ==========
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // ========== PARALLAX EFFECT ON HERO (subtle) ==========
    window.addEventListener('scroll', () => {
        const scrolled = window.pageYOffset;
        const heroText = document.querySelector('.hero-text');
        if (heroText && scrolled < 800) {
            // Keep centered with translate(-50%, -50%) while adding parallax offset
            heroText.style.transform = `translate(-50%, -50%) translateY(${scrolled * 0.15}px)`;
            heroText.style.opacity = Math.max(0, 1 - (scrolled * 0.0012));
        }
    });

    // Floating Donate Button - Draggable (side edges only)
    const floatingDonateBtn = document.getElementById('floatingDonateBtn');
    const closeDonateBtn = document.getElementById('closeDonateBtn');
    
    if (closeDonateBtn) {
        closeDonateBtn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            floatingDonateBtn.style.display = 'none';
        });
    }
    
    if (floatingDonateBtn) {
        let isDragging = false;
        let currentX;
        let currentY;
        let initialX;
        let initialY;
        let xOffset = 0;
        let yOffset = 0;
        
        // Get initial position
        const rect = floatingDonateBtn.getBoundingClientRect();
        xOffset = rect.left;
        yOffset = rect.top;
        
        floatingDonateBtn.addEventListener('mousedown', dragStart);
        floatingDonateBtn.addEventListener('touchstart', dragStart);
        
        document.addEventListener('mousemove', drag);
        document.addEventListener('touchmove', drag);
        document.addEventListener('mouseup', dragEnd);
        document.addEventListener('touchend', dragEnd);
        
        function dragStart(e) {
            // Don't drag if clicking on close button or donate button
            if (e.target.closest('.floating-donate-close-btn') || e.target.closest('.floating-donate-button-link')) {
                return;
            }
            
            if (e.type === 'touchstart') {
                initialX = e.touches[0].clientX - xOffset;
                initialY = e.touches[0].clientY - yOffset;
            } else {
                initialX = e.clientX - xOffset;
                initialY = e.clientY - yOffset;
            }
            
            if (e.target === floatingDonateBtn || floatingDonateBtn.contains(e.target)) {
                isDragging = true;
                floatingDonateBtn.classList.add('dragging');
            }
        }
        
        function drag(e) {
            if (!isDragging) return;
            
            e.preventDefault();
            
            if (e.type === 'touchmove') {
                currentX = e.touches[0].clientX - initialX;
                currentY = e.touches[0].clientY - initialY;
            } else {
                currentX = e.clientX - initialX;
                currentY = e.clientY - initialY;
            }
            
            // Get viewport dimensions
            const viewportWidth = window.innerWidth;
            const viewportHeight = window.innerHeight;
            const btnWidth = floatingDonateBtn.offsetWidth;
            const btnHeight = floatingDonateBtn.offsetHeight;
            
            // Constrain to viewport bounds - allow vertical movement, constrain horizontal
            const minX = 0;
            const maxX = viewportWidth - btnWidth;
            const minY = 0;
            const maxY = viewportHeight - btnHeight;
            
            // Clamp position - allow it to be anywhere while dragging
            let newX = Math.max(minX, Math.min(maxX, currentX));
            let newY = Math.max(minY, Math.min(maxY, currentY));
            
            xOffset = newX;
            yOffset = newY;
            
            setTranslate(newX, newY, floatingDonateBtn);
        }
        
        function dragEnd() {
            if (isDragging) {
                isDragging = false;
                floatingDonateBtn.classList.remove('dragging');
                
                // Check if button is in center zone and snap to nearest side edge (left or right only)
                const viewportWidth = window.innerWidth;
                const viewportHeight = window.innerHeight;
                const btnWidth = floatingDonateBtn.offsetWidth;
                const btnHeight = floatingDonateBtn.offsetHeight;
                
                // Define center exclusion zone (middle 40% of screen horizontally)
                const centerZoneWidth = viewportWidth * 0.4;
                const centerZoneLeft = (viewportWidth - centerZoneWidth) / 2;
                
                const btnCenterX = xOffset + btnWidth / 2;
                
                const inCenterZoneX = btnCenterX >= centerZoneLeft && btnCenterX <= centerZoneLeft + centerZoneWidth;
                
                // If in center zone horizontally, snap to nearest side edge (left or right)
                if (inCenterZoneX) {
                    const distToLeft = xOffset;
                    const distToRight = viewportWidth - (xOffset + btnWidth);
                    
                    let snapX = xOffset;
                    
                    // Always snap to the closer side (left or right)
                    if (distToLeft < distToRight) {
                        snapX = 0;
                    } else {
                        snapX = viewportWidth - btnWidth;
                    }
                    
                    xOffset = snapX;
                    
                    setTranslate(snapX, yOffset, floatingDonateBtn);
                }
            }
        }
        
        function setTranslate(xPos, yPos, el) {
            el.style.left = xPos + 'px';
            el.style.top = yPos + 'px';
            el.style.right = 'auto';
            el.style.bottom = 'auto';
        }
        
        // Initialize position
        setTranslate(xOffset, yOffset, floatingDonateBtn);
    }

</script>
