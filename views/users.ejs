<div class="users-page">
    <% const currentFilterRole = typeof filterRole !== 'undefined' ? filterRole : ''; %>
    <h1 class="mb-4">User Management</h1>
    
    <!-- Search Box, Sort Options, and Add Button - Full Width -->
    <div class="users-top-bar mb-4">
        <form method="GET" action="/users" class="users-search-form">
            <input type="hidden" name="sort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>">
            <input type="hidden" name="sortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>">
            <% if (currentFilterRole) { %>
                <input type="hidden" name="filterRole" value="<%= currentFilterRole %>">
            <% } %>
            <div class="users-search-input-wrapper">
                <i class="fa-solid fa-search users-search-icon"></i>
                <input type="text" class="form-control users-search-input" name="search" id="searchInput" 
                       placeholder="Search users by name, ID, or school/employer..." 
                       value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
            </div>
            <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                <% 
                    const clearParams = [];
                    if (typeof sortColumn !== 'undefined') clearParams.push('sort=' + encodeURIComponent(sortColumn));
                    if (typeof sortDir !== 'undefined') clearParams.push('sortDir=' + encodeURIComponent(sortDir));
                    if (currentFilterRole) clearParams.push('filterRole=' + encodeURIComponent(currentFilterRole));
                    const clearUrl = '/users' + (clearParams.length > 0 ? '?' + clearParams.join('&') : '');
                %>
                <a href="<%= clearUrl %>" class="btn btn-outline-secondary users-clear-btn users-search-clear-btn">Clear</a>
            <% } %>
        </form>
        
        <div class="users-actions">
            <!-- Sort Options -->
            <div class="dropdown">
                <button type="button" class="btn btn-outline-secondary users-sort-btn" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-sort"></i> Sort
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <button type="button" class="dropdown-item <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantID' ? 'active' : '' %>" onclick="sortTable('ParticipantID')">
                            ID <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantID' ? (typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲') : '' %>
                        </button>
                    </li>
                    <li>
                        <button type="button" class="dropdown-item <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantFirstName' ? 'active' : '' %>" onclick="sortTable('ParticipantFirstName')">
                            First <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantFirstName' ? (typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲') : '' %>
                        </button>
                    </li>
                    <li>
                        <button type="button" class="dropdown-item <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantLastName' ? 'active' : '' %>" onclick="sortTable('ParticipantLastName')">
                            Last <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantLastName' ? (typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲') : '' %>
                        </button>
                    </li>
                    <li>
                        <button type="button" class="dropdown-item <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantEmail' ? 'active' : '' %>" onclick="sortTable('ParticipantEmail')">
                            Email <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantEmail' ? (typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲') : '' %>
                        </button>
                    </li>
                    <li>
                        <button type="button" class="dropdown-item <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantRole' ? 'active' : '' %>" onclick="sortTable('ParticipantRole')">
                            Role <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantRole' ? (typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲') : '' %>
                        </button>
                    </li>
                </ul>
            </div>
            
            <button type="button" class="btn btn-primary users-add-btn" data-bs-toggle="modal" data-bs-target="#addUserModal">
                <i class="fa-solid fa-plus"></i> Add New User
            </button>
        </div>
    </div>

    <!-- Role Filter Pills -->
    <div class="mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <span class="filter-label"><i class="fa-solid fa-filter"></i> Filter by Role:</span>
            <div class="event-labels filter-labels" id="users-role-pills">
                <span class="event-label event-label-type-stem filter-pill users-role-pill filter-selected" data-role-value="all">
                    <i class="fa-solid fa-sliders"></i>All Roles
                </span>
                <span class="event-label event-label-type-leadership filter-pill users-role-pill" data-role-value="a">
                    <i class="fa-solid fa-user-shield"></i>Admin
                </span>
                <span class="event-label event-label-type-stem filter-pill users-role-pill" data-role-value="p">
                    <i class="fa-solid fa-user"></i>Participant
                </span>
                <span class="event-label event-label-type-leadership filter-pill users-role-pill" data-role-value="v">
                    <i class="fa-solid fa-users"></i>Volunteer
                </span>
                <span class="event-label event-label-type-arts filter-pill users-role-pill" data-role-value="d">
                    <i class="fa-solid fa-hand-holding-dollar"></i>Donor
                </span>
            </div>
        </div>
    </div>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>

    <% 
        const userRedirectParams = [];
        if (typeof searchTerm !== 'undefined' && searchTerm) userRedirectParams.push('search=' + encodeURIComponent(searchTerm));
        if (typeof sortColumn !== 'undefined' && sortColumn) userRedirectParams.push('sort=' + encodeURIComponent(sortColumn));
        if (typeof sortDir !== 'undefined' && sortDir) userRedirectParams.push('sortDir=' + encodeURIComponent(sortDir));
        if (typeof currentPage !== 'undefined' && currentPage) userRedirectParams.push('page=' + encodeURIComponent(currentPage));
        const usersRedirectUrl = '/users' + (userRedirectParams.length ? '?' + userRedirectParams.join('&') : '');
    %>

    <!-- User Profile Rows -->
    <div class="users-profile-rows">
        <% if (typeof users !== 'undefined' && users.length > 0) { %>
            <% users.forEach(function(user) { %>
                <div class="user-profile-card card shadow-sm mb-2" data-user-role="<%= user.ParticipantRole || '' %>">
                    <div class="card-body py-2">
                        <div class="row align-items-center">
                            <!-- Profile Picture -->
                            <div class="col-auto">
                                <div class="user-avatar">
                                    <div class="avatar-circle">
                                        <%= (user.ParticipantFirstName || '').charAt(0).toUpperCase() %><%= (user.ParticipantLastName || '').charAt(0).toUpperCase() %>
                                    </div>
                                </div>
                            </div>
                            <!-- Name -->
                            <div class="col-auto">
                                <div class="user-info">
                                    <h6 class="mb-0">
                                        <%= user.ParticipantFirstName || 'N/A' %> <%= user.ParticipantLastName || 'N/A' %>
                                    </h6>
                                </div>
                            </div>
                            <!-- ID | Email | School/Employer -->
                            <div class="col-md-auto col-lg-auto flex-grow-1">
                                <div class="user-info-details d-flex flex-wrap align-items-center gap-2">
                                    <span class="text-muted"><%= user.ParticipantID %></span>
                                    <span class="text-muted">|</span>
                                    <span class="text-muted"><%= user.ParticipantEmail || 'N/A' %></span>
                                    <span class="text-muted">|</span>
                                    <span class="text-muted"><%= user.ParticipantSchoolOrEmployer || 'N/A' %></span>
                                </div>
                            </div>
                            <!-- Action Icons -->
                            <div class="col-auto">
                                <div class="d-flex gap-2 align-items-center">
                                    <!-- Role Label (Non-clickable) -->
                                    <span class="role-pill-label <%= user.ParticipantRole === 'a' ? 'role-pill-admin' : (user.ParticipantRole === 'v' ? 'role-pill-volunteer' : (user.ParticipantRole === 'd' ? 'role-pill-donor' : 'role-pill-participant')) %>">
                                        <i class="fa-solid <%= user.ParticipantRole === 'a' ? 'fa-user-shield' : (user.ParticipantRole === 'v' ? 'fa-users' : (user.ParticipantRole === 'd' ? 'fa-hand-holding-dollar' : 'fa-user')) %>"></i> <%= user.ParticipantRole === 'a' ? 'Admin' : (user.ParticipantRole === 'v' ? 'Volunteer' : (user.ParticipantRole === 'd' ? 'Donor' : 'Participant')) %>
                                    </span>
                                    <!-- View Progress Button -->
                                    <button type="button" 
                                            class="btn btn-outline-primary user-view-progress-btn" 
                                            data-participant-id="<%= user.ParticipantID %>"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#progressModal"
                                            title="View Progress">
                                        <i class="fa-solid fa-chart-line"></i> View Progress
                                    </button>
                                    <!-- Edit Icon -->
                                    <button type="button" 
                                            class="btn btn-outline-primary user-edit-btn" 
                                            data-participant-id="<%= user.ParticipantID %>"
                                            data-first-name="<%= user.ParticipantFirstName || '' %>"
                                            data-last-name="<%= user.ParticipantLastName || '' %>"
                                            data-dob="<%= user.ParticipantDOB ? new Date(user.ParticipantDOB).toISOString().split('T')[0] : '' %>"
                                            data-phone="<%= user.ParticipantPhone || '' %>"
                                            data-city="<%= user.ParticipantCity || '' %>"
                                            data-state="<%= user.ParticipantState || '' %>"
                                            data-zip="<%= user.ParticipantZip || '' %>"
                                            data-school="<%= user.ParticipantSchoolOrEmployer || '' %>"
                                            data-interest="<%= user.ParticipantFieldOfInterest || '' %>"
                                            data-email="<%= user.ParticipantEmail || '' %>"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#editParticipantModal"
                                            title="Edit User">
                                        <i class="fa-solid fa-pencil"></i>
                                    </button>
                                    <!-- Delete Icon -->
                                    <button type="button" 
                                            class="btn btn-outline-danger user-delete-btn" 
                                            data-user-id="<%= user.ParticipantID %>"
                                            data-user-name="<%= user.ParticipantFirstName %> <%= user.ParticipantLastName %>"
                                            data-preserve-search="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                                            data-preserve-sort="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>"
                                            data-preserve-sort-dir="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>"
                                            data-preserve-page="<%= typeof currentPage !== 'undefined' ? currentPage : 1 %>"
                                            title="Delete User">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <p class="text-muted mb-0">No users found</p>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Pagination Info and Controls -->
    <div class="mt-4 d-flex justify-content-between align-items-center">
        <div>
            <% if (typeof currentPage !== 'undefined' && currentPage > 1) { %>
                <% 
                    const prevParams = [];
                    if (typeof searchTerm !== 'undefined' && searchTerm) prevParams.push('search=' + encodeURIComponent(searchTerm));
                    if (currentFilterRole) prevParams.push('filterRole=' + encodeURIComponent(currentFilterRole));
                    if (typeof sortColumn !== 'undefined') prevParams.push('sort=' + encodeURIComponent(sortColumn));
                    if (typeof sortDir !== 'undefined') prevParams.push('sortDir=' + encodeURIComponent(sortDir));
                    prevParams.push('page=' + (currentPage - 1));
                    const prevUrl = '/users?' + prevParams.join('&');
                %>
                <a href="<%= prevUrl %>" class="btn btn-secondary users-pagination-btn">
                    &larr; Previous Page
                </a>
            <% } %>
        </div>
        <div class="text-muted">
            Showing <%= typeof users !== 'undefined' && users.length > 0 ? ((currentPage - 1) * 30 + 1) : 0 %> - 
            <%= typeof users !== 'undefined' && users.length > 0 ? Math.min(currentPage * 30, totalUsers) : 0 %> 
            of <%= typeof totalUsers !== 'undefined' ? totalUsers : 0 %> users
            (Page <%= typeof currentPage !== 'undefined' ? currentPage : 1 %> of <%= typeof totalPages !== 'undefined' ? totalPages : 1 %>)
        </div>
        <div>
            <% if (typeof hasNextPage !== 'undefined' && hasNextPage) { %>
                <% 
                    const nextParams = [];
                    if (typeof searchTerm !== 'undefined' && searchTerm) nextParams.push('search=' + encodeURIComponent(searchTerm));
                    if (currentFilterRole) nextParams.push('filterRole=' + encodeURIComponent(currentFilterRole));
                    if (typeof sortColumn !== 'undefined') nextParams.push('sort=' + encodeURIComponent(sortColumn));
                    if (typeof sortDir !== 'undefined') nextParams.push('sortDir=' + encodeURIComponent(sortDir));
                    nextParams.push('page=' + (currentPage + 1));
                    const nextUrl = '/users?' + nextParams.join('&');
                %>
                <a href="<%= nextUrl %>" class="btn btn-primary users-pagination-btn" id="nextPageBtn">
                    Next Page &rarr;
                </a>
            <% } %>
        </div>
    </div>
</div>

<!-- Edit Participant Modal -->
    <div class="modal fade" id="editParticipantModal" tabindex="-1" aria-labelledby="editParticipantModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editParticipantModalLabel">Edit Participant</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editParticipantForm" action="/participants" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="participantId" id="editParticipantId">
                        <input type="hidden" name="preserveSearch" value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                        <input type="hidden" name="preserveSort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>">
                        <input type="hidden" name="preserveSortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>">
                        <input type="hidden" name="preservePage" value="<%= typeof currentPage !== 'undefined' ? currentPage : 1 %>">
                        <input type="hidden" name="redirectTo" value="<%= usersRedirectUrl %>">
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantFirstName" class="form-label">First Name *</label>
                                <input type="text" class="form-control" id="editParticipantFirstName" 
                                       name="ParticipantFirstName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantLastName" class="form-label">Last Name *</label>
                                <input type="text" class="form-control" id="editParticipantLastName" 
                                       name="ParticipantLastName" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantDOB" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="editParticipantDOB" 
                                       name="ParticipantDOB">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantPhone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="editParticipantPhone" 
                                       name="ParticipantPhone" inputmode="numeric" maxlength="12"
                                       pattern="\d{3}-\d{3}-\d{4}"
                                       title="Phone must be in the format 111-111-1111">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="editParticipantCity" class="form-label">City</label>
                                <input type="text" class="form-control" id="editParticipantCity" 
                                       name="ParticipantCity">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="editParticipantState" class="form-label">State</label>
                                <input type="text" class="form-control" id="editParticipantState" 
                                       name="ParticipantState">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="editParticipantZip" class="form-label">ZIP Code</label>
                                <input type="text" class="form-control" id="editParticipantZip" 
                                       name="ParticipantZip">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="editParticipantSchoolOrEmployer" class="form-label">School or Employer</label>
                            <input type="text" class="form-control" id="editParticipantSchoolOrEmployer" 
                                   name="ParticipantSchoolOrEmployer">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Field of Interest</label>
                            <div class="event-labels filter-labels" id="editInterestPills">
                                <span class="event-label event-label-type-stem filter-pill edit-interest-pill" data-interest-value="STEM">
                                    <i class="fa-solid fa-gear"></i>STEM
                                </span>
                                <span class="event-label event-label-type-arts filter-pill edit-interest-pill" data-interest-value="Arts">
                                    <i class="fa-solid fa-paintbrush"></i>Arts
                                </span>
                                <span class="event-label event-label-type-annual-conference filter-pill edit-interest-pill" data-interest-value="Both">
                                    <i class="fa-solid fa-layer-group"></i>Both
                                </span>
                            </div>
                            <input type="hidden" name="ParticipantFieldOfInterest" id="editParticipantFieldOfInterest" value="">
                        </div>

                        <!-- Role Selection -->
                        <div class="mb-3">
                            <label class="form-label">Role *</label>
                            <div class="event-labels filter-labels" id="editRolePills">
                                <span class="event-label event-label-type-leadership filter-pill edit-role-pill" data-role-value="a">
                                    <i class="fa-solid fa-user-shield"></i>Admin
                                </span>
                                <span class="event-label event-label-type-stem filter-pill edit-role-pill" data-role-value="p">
                                    <i class="fa-solid fa-user"></i>Participant
                                </span>
                                <span class="event-label event-label-type-leadership filter-pill edit-role-pill" data-role-value="v">
                                    <i class="fa-solid fa-users"></i>Volunteer
                                </span>
                                <span class="event-label event-label-type-arts filter-pill edit-role-pill" data-role-value="d">
                                    <i class="fa-solid fa-hand-holding-dollar"></i>Donor
                                </span>
                            </div>
                            <input type="hidden" name="ParticipantRole" id="editParticipantRole" value="" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" form="editParticipantForm" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addUserModalLabel">Add New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addUserForm" action="/users/add" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <!-- Name -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantFirstName" class="form-label">First Name *</label>
                            <input type="text" class="form-control" id="modalParticipantFirstName" 
                                   name="ParticipantFirstName" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantLastName" class="form-label">Last Name *</label>
                            <input type="text" class="form-control" id="modalParticipantLastName" 
                                   name="ParticipantLastName" required>
                        </div>
                    </div>

                    <!-- Email & Password -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantEmail" class="form-label">Email *</label>
                            <input type="email" class="form-control" id="modalParticipantEmail" 
                                   name="ParticipantEmail" required
                                   pattern="[^@\s]+@[^@\s]+\.[^@\s]+"
                                   oninvalid="this.setCustomValidity('Please input a valid email')"
                                   oninput="this.setCustomValidity('')">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantPassword" class="form-label">Password *</label>
                            <input type="password" class="form-control" id="modalParticipantPassword" 
                                   name="ParticipantPassword" required>
                        </div>
                    </div>

                    <!-- DOB & Phone -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantDOB" class="form-label">Date of Birth *</label>
                            <input type="date" class="form-control" id="modalParticipantDOB" 
                                   name="ParticipantDOB" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantPhone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="modalParticipantPhone" 
                                   name="ParticipantPhone" inputmode="numeric" maxlength="12"
                                   pattern="\d{3}-\d{3}-\d{4}"
                                   title="Phone must be in the format 111-111-1111">
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="modalParticipantCity" class="form-label">City</label>
                            <input type="text" class="form-control" id="modalParticipantCity" 
                                   name="ParticipantCity">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="modalParticipantState" class="form-label">State</label>
                            <input type="text" class="form-control" id="modalParticipantState" 
                                   name="ParticipantState">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="modalParticipantZip" class="form-label">ZIP Code</label>
                            <input type="text" class="form-control" id="modalParticipantZip" 
                                   name="ParticipantZip">
                        </div>
                    </div>

                    <!-- School/Employer -->
                    <div class="mb-3">
                        <label for="modalParticipantSchoolOrEmployer" class="form-label">School or Employer</label>
                        <input type="text" class="form-control" id="modalParticipantSchoolOrEmployer" 
                               name="ParticipantSchoolOrEmployer">
                    </div>

                    <!-- Field of Interest -->
                    <div class="mb-3">
                        <label class="form-label">Field of Interest</label>
                        <div class="event-labels filter-labels" id="addInterestPills">
                            <span class="event-label event-label-type-stem filter-pill add-interest-pill" data-interest-value="STEM">
                                <i class="fa-solid fa-gear"></i>STEM
                            </span>
                            <span class="event-label event-label-type-arts filter-pill add-interest-pill" data-interest-value="Arts">
                                <i class="fa-solid fa-paintbrush"></i>Arts
                            </span>
                            <span class="event-label event-label-type-annual-conference filter-pill add-interest-pill" data-interest-value="Both">
                                <i class="fa-solid fa-layer-group"></i>Both
                            </span>
                        </div>
                        <input type="hidden" name="ParticipantFieldOfInterest" id="addParticipantFieldOfInterest" value="">
                    </div>

                    <!-- Role Selection (Admin Only) -->
                    <div class="mb-3">
                        <label class="form-label">Role *</label>
                        <div class="event-labels filter-labels" id="addRolePills">
                            <span class="event-label event-label-type-leadership filter-pill add-role-pill" data-role-value="a">
                                <i class="fa-solid fa-user-shield"></i>Admin
                            </span>
                            <span class="event-label event-label-type-stem filter-pill add-role-pill filter-selected" data-role-value="p">
                                <i class="fa-solid fa-user"></i>Participant
                            </span>
                            <span class="event-label event-label-type-leadership filter-pill add-role-pill" data-role-value="v">
                                <i class="fa-solid fa-users"></i>Volunteer
                            </span>
                            <span class="event-label event-label-type-arts filter-pill add-role-pill" data-role-value="d">
                                <i class="fa-solid fa-hand-holding-dollar"></i>Donor
                            </span>
                        </div>
                        <input type="hidden" name="ParticipantRole" id="addParticipantRole" value="p" required>
                    </div>
                </form>
