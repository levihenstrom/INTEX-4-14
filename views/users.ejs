<div class="users-page">
    <h1 class="mb-4">User Management</h1>
    
    <!-- Search Box, Sort Options, and Add Button - Full Width -->
    <div class="mb-3 d-flex align-items-center gap-3 flex-wrap">
        <form method="GET" action="/users" class="flex-grow-1" style="min-width: 250px;">
            <input type="hidden" name="sort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>">
            <input type="hidden" name="sortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>">
            <div class="input-group">
                <input type="text" class="form-control" name="search" id="searchInput" 
                       placeholder="Search users by name, ID, or school/employer..." 
                       value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                <button type="submit" class="btn btn-outline-secondary">Search</button>
                <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                    <a href="/users?sort=<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>&sortDir=<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>" class="btn btn-outline-secondary">Clear</a>
                <% } %>
            </div>
        </form>
        
        <!-- Sort Options -->
        <div class="d-flex align-items-center gap-2 flex-wrap flex-grow-1" style="min-width: 300px;">
            <span class="text-muted small">Sort:</span>
            <div class="btn-group btn-group-sm flex-grow-1" role="group">
                <button type="button" class="btn btn-outline-secondary <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantID' ? 'active' : '' %>" onclick="sortTable('ParticipantID')">
                    ID <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantID' ? (typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲') : '' %>
                </button>
                <button type="button" class="btn btn-outline-secondary <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantFirstName' ? 'active' : '' %>" onclick="sortTable('ParticipantFirstName')">
                    First <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantFirstName' ? (typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲') : '' %>
                </button>
                <button type="button" class="btn btn-outline-secondary <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantLastName' ? 'active' : '' %>" onclick="sortTable('ParticipantLastName')">
                    Last <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantLastName' ? (typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲') : '' %>
                </button>
                <button type="button" class="btn btn-outline-secondary <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantEmail' ? 'active' : '' %>" onclick="sortTable('ParticipantEmail')">
                    Email <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantEmail' ? (typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲') : '' %>
                </button>
                <button type="button" class="btn btn-outline-secondary <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantRole' ? 'active' : '' %>" onclick="sortTable('ParticipantRole')">
                    Role <%= typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantRole' ? (typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲') : '' %>
                </button>
            </div>
        </div>
        
        <button type="button" class="btn btn-success flex-shrink-0" style="background-color: #28a745; border-color: #28a745;" data-bs-toggle="modal" data-bs-target="#addUserModal">
            + Add New User
        </button>
    </div>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    <% } %>

    <% 
        const userRedirectParams = [];
        if (typeof searchTerm !== 'undefined' && searchTerm) userRedirectParams.push('search=' + encodeURIComponent(searchTerm));
        if (typeof sortColumn !== 'undefined' && sortColumn) userRedirectParams.push('sort=' + encodeURIComponent(sortColumn));
        if (typeof sortDir !== 'undefined' && sortDir) userRedirectParams.push('sortDir=' + encodeURIComponent(sortDir));
        if (typeof currentPage !== 'undefined' && currentPage) userRedirectParams.push('page=' + encodeURIComponent(currentPage));
        const usersRedirectUrl = '/users' + (userRedirectParams.length ? '?' + userRedirectParams.join('&') : '');
    %>

    <!-- User Profile Rows -->
    <div class="users-profile-rows">
        <% if (typeof users !== 'undefined' && users.length > 0) { %>
            <% users.forEach(function(user) { %>
                <div class="user-profile-card card shadow-sm mb-2">
                    <div class="card-body py-2">
                        <div class="row align-items-center">
                            <!-- Profile Picture -->
                            <div class="col-auto">
                                <div class="user-avatar">
                                    <div class="avatar-circle">
                                        <%= (user.ParticipantFirstName || '').charAt(0).toUpperCase() %><%= (user.ParticipantLastName || '').charAt(0).toUpperCase() %>
                                    </div>
                                </div>
                            </div>
                            <!-- Name -->
                            <div class="col-auto">
                                <div class="user-info">
                                    <h6 class="mb-0">
                                        <%= user.ParticipantFirstName || 'N/A' %> <%= user.ParticipantLastName || 'N/A' %>
                                    </h6>
                                </div>
                            </div>
                            <!-- ID | Email | School/Employer -->
                            <div class="col-md-auto col-lg-auto flex-grow-1">
                                <div class="user-info-details d-flex flex-wrap align-items-center gap-2">
                                    <span class="text-muted"><%= user.ParticipantID %></span>
                                    <span class="text-muted">|</span>
                                    <span class="text-muted"><%= user.ParticipantEmail || 'N/A' %></span>
                                    <span class="text-muted">|</span>
                                    <span class="text-muted"><%= user.ParticipantSchoolOrEmployer || 'N/A' %></span>
                                </div>
                            </div>
                            <!-- Action Icons -->
                            <div class="col-auto">
                                <div class="d-flex gap-2 align-items-center">
                                    <!-- Role Dropdown (Pill-shaped) -->
                                    <div class="dropdown role-dropdown">
                                        <button class="btn btn-sm role-pill-btn <%= user.ParticipantRole === 'a' ? 'role-pill-admin' : (user.ParticipantRole === 'v' ? 'role-pill-volunteer' : (user.ParticipantRole === 'd' ? 'role-pill-donor' : 'role-pill-participant')) %>" 
                                                type="button" 
                                                id="roleDropdown<%= user.ParticipantID %>" 
                                                data-bs-toggle="dropdown" 
                                                aria-expanded="false"
                                                data-user-id="<%= user.ParticipantID %>"
                                                data-current-role="<%= user.ParticipantRole %>">
                                            <%= user.ParticipantRole === 'a' ? 'Admin' : (user.ParticipantRole === 'v' ? 'Volunteer' : (user.ParticipantRole === 'd' ? 'Donor' : 'Participant')) %>
                                        </button>
                                        <ul class="dropdown-menu role-dropdown-menu" aria-labelledby="roleDropdown<%= user.ParticipantID %>">
                                            <% if (user.ParticipantRole !== 'a') { %>
                                                <li>
                                                    <form action="/users" method="POST" class="role-change-form role-form-admin" data-user-id="<%= user.ParticipantID %>">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <input type="hidden" name="participantId" value="<%= user.ParticipantID %>">
                                                        <input type="hidden" name="newRole" value="a">
                                                        <input type="hidden" name="preserveSearch" value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                                                        <input type="hidden" name="preserveSort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>">
                                                        <input type="hidden" name="preserveSortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>">
                                                        <input type="hidden" name="preservePage" value="<%= typeof currentPage !== 'undefined' ? currentPage : 1 %>">
                                                        <button type="submit" class="dropdown-item role-dropdown-item role-item-admin">Admin</button>
                                                    </form>
                                                </li>
                                            <% } %>
                                            <% if (user.ParticipantRole !== 'v') { %>
                                                <li>
                                                    <form action="/users" method="POST" class="role-change-form role-form-volunteer" data-user-id="<%= user.ParticipantID %>">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <input type="hidden" name="participantId" value="<%= user.ParticipantID %>">
                                                        <input type="hidden" name="newRole" value="v">
                                                        <input type="hidden" name="preserveSearch" value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                                                        <input type="hidden" name="preserveSort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>">
                                                        <input type="hidden" name="preserveSortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>">
                                                        <input type="hidden" name="preservePage" value="<%= typeof currentPage !== 'undefined' ? currentPage : 1 %>">
                                                        <button type="submit" class="dropdown-item role-dropdown-item role-item-volunteer">Volunteer</button>
                                                    </form>
                                                </li>
                                            <% } %>
                                            <% if (user.ParticipantRole !== 'd') { %>
                                                <li>
                                                    <form action="/users" method="POST" class="role-change-form role-form-donor" data-user-id="<%= user.ParticipantID %>">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <input type="hidden" name="participantId" value="<%= user.ParticipantID %>">
                                                        <input type="hidden" name="newRole" value="d">
                                                        <input type="hidden" name="preserveSearch" value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                                                        <input type="hidden" name="preserveSort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>">
                                                        <input type="hidden" name="preserveSortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>">
                                                        <input type="hidden" name="preservePage" value="<%= typeof currentPage !== 'undefined' ? currentPage : 1 %>">
                                                        <button type="submit" class="dropdown-item role-dropdown-item role-item-donor">Donor</button>
                                                    </form>
                                                </li>
                                            <% } %>
                                            <% if (user.ParticipantRole !== 'p') { %>
                                                <li>
                                                    <form action="/users" method="POST" class="role-change-form role-form-participant" data-user-id="<%= user.ParticipantID %>">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <input type="hidden" name="participantId" value="<%= user.ParticipantID %>">
                                                        <input type="hidden" name="newRole" value="p">
                                                        <input type="hidden" name="preserveSearch" value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                                                        <input type="hidden" name="preserveSort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>">
                                                        <input type="hidden" name="preserveSortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>">
                                                        <input type="hidden" name="preservePage" value="<%= typeof currentPage !== 'undefined' ? currentPage : 1 %>">
                                                        <button type="submit" class="dropdown-item role-dropdown-item role-item-participant">Participant</button>
                                                    </form>
                                                </li>
                                            <% } %>
                                        </ul>
                                    </div>
                                    <!-- Edit Icon -->
                                    <button type="button" 
                                            class="btn btn-sm btn-link p-0 edit-user-btn" 
                                            data-participant-id="<%= user.ParticipantID %>"
                                            data-first-name="<%= user.ParticipantFirstName || '' %>"
                                            data-last-name="<%= user.ParticipantLastName || '' %>"
                                            data-dob="<%= user.ParticipantDOB ? new Date(user.ParticipantDOB).toISOString().split('T')[0] : '' %>"
                                            data-phone="<%= user.ParticipantPhone || '' %>"
                                            data-city="<%= user.ParticipantCity || '' %>"
                                            data-state="<%= user.ParticipantState || '' %>"
                                            data-zip="<%= user.ParticipantZip || '' %>"
                                            data-school="<%= user.ParticipantSchoolOrEmployer || '' %>"
                                            data-interest="<%= user.ParticipantFieldOfInterest || '' %>"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#editParticipantModal"
                                            title="Edit User">
                                        <i class="fas fa-edit text-primary" style="font-size: 1.2rem;"></i>
                                    </button>
                                    <!-- Delete Icon -->
                                    <button type="button" 
                                            class="btn btn-sm btn-link p-0 delete-user-btn" 
                                            data-user-id="<%= user.ParticipantID %>"
                                            data-user-name="<%= user.ParticipantFirstName %> <%= user.ParticipantLastName %>"
                                            data-preserve-search="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                                            data-preserve-sort="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>"
                                            data-preserve-sort-dir="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>"
                                            data-preserve-page="<%= typeof currentPage !== 'undefined' ? currentPage : 1 %>"
                                            title="Delete User">
                                        <i class="fas fa-trash text-danger" style="font-size: 1.2rem;"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <p class="text-muted mb-0">No users found</p>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Pagination Info and Controls -->
    <div class="mt-4 d-flex justify-content-between align-items-center">
        <div>
            <% if (typeof currentPage !== 'undefined' && currentPage > 1) { %>
                <a href="/users?page=<%= currentPage - 1 %><%= typeof searchTerm !== 'undefined' && searchTerm ? '&search=' + encodeURIComponent(searchTerm) : '' %><%= typeof sortColumn !== 'undefined' ? '&sort=' + sortColumn : '' %><%= typeof sortDir !== 'undefined' ? '&sortDir=' + sortDir : '' %>" class="btn btn-secondary me-2">
                    ← Previous Page
                </a>
            <% } %>
        </div>
        <div class="text-muted">
            Showing <%= typeof users !== 'undefined' && users.length > 0 ? ((currentPage - 1) * 50 + 1) : 0 %> - 
            <%= typeof users !== 'undefined' && users.length > 0 ? Math.min(currentPage * 50, totalUsers) : 0 %> 
            of <%= typeof totalUsers !== 'undefined' ? totalUsers : 0 %> users
            (Page <%= typeof currentPage !== 'undefined' ? currentPage : 1 %> of <%= typeof totalPages !== 'undefined' ? totalPages : 1 %>)
        </div>
        <div>
            <% if (typeof hasNextPage !== 'undefined' && hasNextPage) { %>
                <a href="/users?page=<%= currentPage + 1 %><%= typeof searchTerm !== 'undefined' && searchTerm ? '&search=' + encodeURIComponent(searchTerm) : '' %><%= typeof sortColumn !== 'undefined' ? '&sort=' + sortColumn : '' %><%= typeof sortDir !== 'undefined' ? '&sortDir=' + sortDir : '' %>" class="btn btn-primary" id="nextPageBtn">
                    Next Page →
                </a>
            <% } %>
        </div>
    </div>
</div>

<!-- Edit Participant Modal -->
    <div class="modal fade" id="editParticipantModal" tabindex="-1" aria-labelledby="editParticipantModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editParticipantModalLabel">Edit Participant</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editParticipantForm" action="/participants" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="participantId" id="editParticipantId">
                        <input type="hidden" name="preserveSearch" value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                        <input type="hidden" name="preserveSort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>">
                        <input type="hidden" name="preserveSortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>">
                        <input type="hidden" name="preservePage" value="<%= typeof currentPage !== 'undefined' ? currentPage : 1 %>">
                        <input type="hidden" name="redirectTo" value="<%= usersRedirectUrl %>">
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantFirstName" class="form-label">First Name *</label>
                                <input type="text" class="form-control" id="editParticipantFirstName" 
                                       name="ParticipantFirstName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantLastName" class="form-label">Last Name *</label>
                                <input type="text" class="form-control" id="editParticipantLastName" 
                                       name="ParticipantLastName" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantDOB" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="editParticipantDOB" 
                                       name="ParticipantDOB">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantPhone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="editParticipantPhone" 
                                       name="ParticipantPhone" inputmode="numeric" maxlength="12"
                                       pattern="\d{3}-\d{3}-\d{4}"
                                       title="Phone must be in the format 111-111-1111">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="editParticipantCity" class="form-label">City</label>
                                <input type="text" class="form-control" id="editParticipantCity" 
                                       name="ParticipantCity">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="editParticipantState" class="form-label">State</label>
                                <input type="text" class="form-control" id="editParticipantState" 
                                       name="ParticipantState">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="editParticipantZip" class="form-label">ZIP Code</label>
                                <input type="text" class="form-control" id="editParticipantZip" 
                                       name="ParticipantZip">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="editParticipantSchoolOrEmployer" class="form-label">School or Employer</label>
                            <input type="text" class="form-control" id="editParticipantSchoolOrEmployer" 
                                   name="ParticipantSchoolOrEmployer">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Field of Interest</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                       id="edit_interest_stem" value="STEM">
                                <label class="form-check-label" for="edit_interest_stem">STEM</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                       id="edit_interest_arts" value="Arts">
                                <label class="form-check-label" for="edit_interest_arts">Arts</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                       id="edit_interest_both" value="Both">
                                <label class="form-check-label" for="edit_interest_both">Both</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" form="editParticipantForm" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addUserModalLabel">Add New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addUserForm" action="/users/add" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <!-- Name -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantFirstName" class="form-label">First Name *</label>
                            <input type="text" class="form-control" id="modalParticipantFirstName" 
                                   name="ParticipantFirstName" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantLastName" class="form-label">Last Name *</label>
                            <input type="text" class="form-control" id="modalParticipantLastName" 
                                   name="ParticipantLastName" required>
                        </div>
                    </div>

                    <!-- Email & Password -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantEmail" class="form-label">Email *</label>
                            <input type="email" class="form-control" id="modalParticipantEmail" 
                                   name="ParticipantEmail" required
                                   pattern="[^@\s]+@[^@\s]+\.[^@\s]+"
                                   oninvalid="this.setCustomValidity('Please input a valid email')"
                                   oninput="this.setCustomValidity('')">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantPassword" class="form-label">Password *</label>
                            <input type="password" class="form-control" id="modalParticipantPassword" 
                                   name="ParticipantPassword" required>
                        </div>
                    </div>

                    <!-- DOB & Phone -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantDOB" class="form-label">Date of Birth *</label>
                            <input type="date" class="form-control" id="modalParticipantDOB" 
                                   name="ParticipantDOB" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantPhone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="modalParticipantPhone" 
                                   name="ParticipantPhone" inputmode="numeric" maxlength="12"
                                   pattern="\d{3}-\d{3}-\d{4}"
                                   title="Phone must be in the format 111-111-1111">
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="modalParticipantCity" class="form-label">City</label>
                            <input type="text" class="form-control" id="modalParticipantCity" 
                                   name="ParticipantCity">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="modalParticipantState" class="form-label">State</label>
                            <input type="text" class="form-control" id="modalParticipantState" 
                                   name="ParticipantState">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="modalParticipantZip" class="form-label">ZIP Code</label>
                            <input type="text" class="form-control" id="modalParticipantZip" 
                                   name="ParticipantZip">
                        </div>
                    </div>

                    <!-- School/Employer -->
                    <div class="mb-3">
                        <label for="modalParticipantSchoolOrEmployer" class="form-label">School or Employer</label>
                        <input type="text" class="form-control" id="modalParticipantSchoolOrEmployer" 
                               name="ParticipantSchoolOrEmployer">
                    </div>

                    <!-- Field of Interest -->
                    <div class="mb-3">
                        <label class="form-label">Field of Interest</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                   id="modal_interest_stem" value="STEM">
                            <label class="form-check-label" for="modal_interest_stem">STEM</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                   id="modal_interest_arts" value="Arts">
                            <label class="form-check-label" for="modal_interest_arts">Arts</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                   id="modal_interest_both" value="Both">
                            <label class="form-check-label" for="modal_interest_both">Both</label>
                        </div>
                    </div>

                    <!-- Role Selection (Admin Only) -->
                    <div class="mb-3">
                        <label class="form-label">Role *</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ParticipantRole" 
                                   id="modal_role_admin" value="a" required>
                            <label class="form-check-label" for="modal_role_admin">Admin</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ParticipantRole" 
                                   id="modal_role_user" value="p" checked>
                            <label class="form-check-label" for="modal_role_user">User</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="addUserForm" class="btn btn-success">Create User</button>
            </div>
        </div>
    </div>
</div>

<script>
function sortTable(column) {
    const urlParams = new URLSearchParams(window.location.search);
    const currentSort = urlParams.get('sort') || 'ParticipantID';
    const currentSortDir = urlParams.get('sortDir') || 'asc';
    
    // If clicking the same column, toggle direction; otherwise default to asc
    let newSortDir = 'asc';
    if (currentSort === column && currentSortDir === 'asc') {
        newSortDir = 'desc';
    }
    
    urlParams.set('sort', column);
    urlParams.set('sortDir', newSortDir);
    urlParams.set('page', '1'); // Reset to first page when sorting
    
    window.location.href = '/users?' + urlParams.toString();
}

document.addEventListener('DOMContentLoaded', function() {
    // Role change form handlers (for dropdown role changes)
    const roleChangeForms = document.querySelectorAll('.role-change-form');
    roleChangeForms.forEach(function(form) {
        form.addEventListener('submit', function(e) {
            const userId = form.getAttribute('data-user-id');
            const newRole = form.querySelector('input[name="newRole"]').value;
            const roleNames = { 'a': 'Admin', 'v': 'Volunteer', 'd': 'Donor', 'p': 'Participant' };
            const newRoleName = roleNames[newRole] || 'this role';
            
            if (!confirm('Are you sure you want to change this user\'s role to ' + newRoleName + '?')) {
                e.preventDefault();
                return false;
            }
        });
    });

    // Delete user button handlers
    const deleteButtons = document.querySelectorAll('.delete-user-btn');
    deleteButtons.forEach(function(button) {
        button.addEventListener('click', function(e) {
            const userId = button.getAttribute('data-user-id');
            const userName = button.getAttribute('data-user-name');
            const preserveSearch = button.getAttribute('data-preserve-search') || '';
            const preserveSort = button.getAttribute('data-preserve-sort') || 'ParticipantID';
            const preserveSortDir = button.getAttribute('data-preserve-sort-dir') || 'asc';
            const preservePage = button.getAttribute('data-preserve-page') || '1';
            const message = 'Are you sure you want to delete user \'' + userName + '\'? This action cannot be undone.';
            
            if (confirm(message)) {
                // Create a form to submit DELETE request
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/users/delete';
                
                const inputCsrf = document.createElement('input');
                inputCsrf.type = 'hidden';
                inputCsrf.name = '_csrf';
                inputCsrf.value = '<%= csrfToken %>';
                form.appendChild(inputCsrf);

                const inputId = document.createElement('input');
                inputId.type = 'hidden';
                inputId.name = 'participantId';
                inputId.value = userId;
                form.appendChild(inputId);
                
                const inputSearch = document.createElement('input');
                inputSearch.type = 'hidden';
                inputSearch.name = 'preserveSearch';
                inputSearch.value = preserveSearch;
                form.appendChild(inputSearch);
                
                const inputSort = document.createElement('input');
                inputSort.type = 'hidden';
                inputSort.name = 'preserveSort';
                inputSort.value = preserveSort;
                form.appendChild(inputSort);
                
                const inputSortDir = document.createElement('input');
                inputSortDir.type = 'hidden';
                inputSortDir.name = 'preserveSortDir';
                inputSortDir.value = preserveSortDir;
                form.appendChild(inputSortDir);
                
                const inputPage = document.createElement('input');
                inputPage.type = 'hidden';
                inputPage.name = 'preservePage';
                inputPage.value = preservePage;
                form.appendChild(inputPage);
                
                document.body.appendChild(form);
                form.submit();
            }
        });
    });

    // Edit user modal population
    const editButtons = document.querySelectorAll('.edit-user-btn');
    const editFormFields = {
        id: document.getElementById('editParticipantId'),
        firstName: document.getElementById('editParticipantFirstName'),
        lastName: document.getElementById('editParticipantLastName'),
        dob: document.getElementById('editParticipantDOB'),
        phone: document.getElementById('editParticipantPhone'),
        city: document.getElementById('editParticipantCity'),
        state: document.getElementById('editParticipantState'),
        zip: document.getElementById('editParticipantZip'),
        school: document.getElementById('editParticipantSchoolOrEmployer')
    };

    editButtons.forEach(function(button) {
        button.addEventListener('click', function() {
            editFormFields.id.value = button.getAttribute('data-participant-id') || '';
            editFormFields.firstName.value = button.getAttribute('data-first-name') || '';
            editFormFields.lastName.value = button.getAttribute('data-last-name') || '';
            editFormFields.dob.value = button.getAttribute('data-dob') || '';
            editFormFields.phone.value = button.getAttribute('data-phone') || '';
            editFormFields.city.value = button.getAttribute('data-city') || '';
            editFormFields.state.value = button.getAttribute('data-state') || '';
            editFormFields.zip.value = button.getAttribute('data-zip') || '';
            editFormFields.school.value = button.getAttribute('data-school') || '';

            const interestValue = button.getAttribute('data-interest');
            document.querySelectorAll('input[name="ParticipantFieldOfInterest"]').forEach(function(radio) {
                radio.checked = (radio.value === interestValue);
            });
        });
    });

    // Phone formatting for modal
    function attachPhoneMask(input) {
        if (!input) return;
        input.addEventListener('input', function () {
            // Strip all non-digits
            let digits = input.value.replace(/\D/g, '');

            // Limit to 10 digits
            if (digits.length > 10) {
                digits = digits.slice(0, 10);
            }

            let formatted = '';
            if (digits.length > 0) {
                formatted = digits.substring(0, 3);
            }
            if (digits.length >= 4) {
                formatted += '-' + digits.substring(3, 6);
            }
            if (digits.length >= 7) {
                formatted += '-' + digits.substring(6, 10);
            }

            input.value = formatted;
        });
    }

    attachPhoneMask(document.getElementById('modalParticipantPhone'));
    attachPhoneMask(document.getElementById('editParticipantPhone'));
});
</script>
