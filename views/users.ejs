<script>
function sortTable(column) {
    const urlParams = new URLSearchParams(window.location.search);
    const currentSort = urlParams.get('sort') || 'ParticipantID';
    const currentSortDir = urlParams.get('sortDir') || 'asc';
    
    // If clicking the same column, toggle direction; otherwise default to asc
    let newSortDir = 'asc';
    if (currentSort === column && currentSortDir === 'asc') {
        newSortDir = 'desc';
    }
    
    urlParams.set('sort', column);
    urlParams.set('sortDir', newSortDir);
    urlParams.set('page', '1'); // Reset to first page when sorting
    
    window.location.href = '/users?' + urlParams.toString();
}

document.addEventListener('DOMContentLoaded', function() {
    // Role filter pills - refresh page with filter
    const rolePills = Array.from(document.querySelectorAll('#users-role-pills .users-role-pill'));
    
    // Set active pill based on current filter
    const currentFilterRole = '<%= currentFilterRole || "all" %>';
    rolePills.forEach(pill => {
        const value = pill.getAttribute('data-role-value');
        if ((currentFilterRole === '' && value === 'all') || currentFilterRole === value) {
            pill.classList.add('filter-selected');
        } else {
            pill.classList.remove('filter-selected');
        }
    });
    
    rolePills.forEach(pill => {
        pill.addEventListener('click', () => {
            const value = pill.getAttribute('data-role-value');
            const urlParams = new URLSearchParams(window.location.search);
            
            // Remove page param to go to page 1
            urlParams.delete('page');
            
            // Set or remove filterRole
            if (value === 'all') {
                urlParams.delete('filterRole');
            } else {
                urlParams.set('filterRole', value);
            }
            
            // Preserve search and sort
            const searchTerm = urlParams.get('search');
            const sort = urlParams.get('sort');
            const sortDir = urlParams.get('sortDir');
            
            // Build new URL
            const newParams = [];
            if (searchTerm) newParams.push('search=' + encodeURIComponent(searchTerm));
            if (value !== 'all') newParams.push('filterRole=' + encodeURIComponent(value));
            if (sort) newParams.push('sort=' + encodeURIComponent(sort));
            if (sortDir) newParams.push('sortDir=' + encodeURIComponent(sortDir));
            
            const newUrl = '/users' + (newParams.length > 0 ? '?' + newParams.join('&') : '');
            window.location.href = newUrl;
        });
    });

    // Auto-submit search form on Enter key
    const searchInput = document.getElementById('searchInput');
    if (searchInput) {
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                const form = searchInput.closest('form');
                if (form) {
                    form.submit();
                }
            }
        });
    }


    // Delete user button handlers
    const deleteButtons = document.querySelectorAll('.user-delete-btn');
    deleteButtons.forEach(function(button) {
        button.addEventListener('click', function(e) {
            const userId = button.getAttribute('data-user-id');
            const userName = button.getAttribute('data-user-name');
            const preserveSearch = button.getAttribute('data-preserve-search') || '';
            const preserveSort = button.getAttribute('data-preserve-sort') || 'ParticipantID';
            const preserveSortDir = button.getAttribute('data-preserve-sort-dir') || 'asc';
            const preservePage = button.getAttribute('data-preserve-page') || '1';
            const message = 'Are you sure you want to delete user \'' + userName + '\'? This action cannot be undone.';
            
            if (confirm(message)) {
                // Create a form to submit DELETE request
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/users/delete';
                
                const inputCsrf = document.createElement('input');
                inputCsrf.type = 'hidden';
                inputCsrf.name = '_csrf';
                inputCsrf.value = '<%= csrfToken %>';
                form.appendChild(inputCsrf);

                const inputId = document.createElement('input');
                inputId.type = 'hidden';
                inputId.name = 'participantId';
                inputId.value = userId;
                form.appendChild(inputId);
                
                const inputSearch = document.createElement('input');
                inputSearch.type = 'hidden';
                inputSearch.name = 'preserveSearch';
                inputSearch.value = preserveSearch;
                form.appendChild(inputSearch);
                
                const inputSort = document.createElement('input');
                inputSort.type = 'hidden';
                inputSort.name = 'preserveSort';
                inputSort.value = preserveSort;
                form.appendChild(inputSort);
                
                const inputSortDir = document.createElement('input');
                inputSortDir.type = 'hidden';
                inputSortDir.name = 'preserveSortDir';
                inputSortDir.value = preserveSortDir;
                form.appendChild(inputSortDir);
                
                const inputPage = document.createElement('input');
                inputPage.type = 'hidden';
                inputPage.name = 'preservePage';
                inputPage.value = preservePage;
                form.appendChild(inputPage);
                
                document.body.appendChild(form);
                form.submit();
            }
        });
    });

    // Edit user modal population
    const editButtons = document.querySelectorAll('.user-edit-btn');
    const editFormFields = {
        id: document.getElementById('editParticipantId'),
        firstName: document.getElementById('editParticipantFirstName'),
        lastName: document.getElementById('editParticipantLastName'),
        dob: document.getElementById('editParticipantDOB'),
        phone: document.getElementById('editParticipantPhone'),
        city: document.getElementById('editParticipantCity'),
        state: document.getElementById('editParticipantState'),
        zip: document.getElementById('editParticipantZip'),
        school: document.getElementById('editParticipantSchoolOrEmployer'),
        interest: document.getElementById('editParticipantFieldOfInterest'),
        role: document.getElementById('editParticipantRole')
    };

    editButtons.forEach(function(button) {
        button.addEventListener('click', function() {
            editFormFields.id.value = button.getAttribute('data-participant-id') || '';
            editFormFields.firstName.value = button.getAttribute('data-first-name') || '';
            editFormFields.lastName.value = button.getAttribute('data-last-name') || '';
            editFormFields.dob.value = button.getAttribute('data-dob') || '';
            editFormFields.phone.value = button.getAttribute('data-phone') || '';
            editFormFields.city.value = button.getAttribute('data-city') || '';
            editFormFields.state.value = button.getAttribute('data-state') || '';
            editFormFields.zip.value = button.getAttribute('data-zip') || '';
            editFormFields.school.value = button.getAttribute('data-school') || '';

            const interestValue = button.getAttribute('data-interest') || '';
            editFormFields.interest.value = interestValue;
            
            // Update interest icon pills
            const editInterestPills = document.querySelectorAll('.edit-interest-pill');
            editInterestPills.forEach(function(pill) {
                pill.classList.remove('filter-selected');
                if (pill.getAttribute('data-interest-value') === interestValue) {
                    pill.classList.add('filter-selected');
                }
            });

            // Get role from user card data attribute
            const userCard = button.closest('.user-profile-card');
            const userRole = userCard ? userCard.getAttribute('data-user-role') || 'p' : 'p';
            if (editFormFields.role) {
                editFormFields.role.value = userRole;
            }
            
            // Update role icon pills
            const editRolePills = document.querySelectorAll('.edit-role-pill');
            editRolePills.forEach(function(pill) {
                pill.classList.remove('filter-selected');
                if (pill.getAttribute('data-role-value') === userRole) {
                    pill.classList.add('filter-selected');
                }
            });
        });
    });

    // Role pill handlers for Edit modal
    const editRolePills = document.querySelectorAll('.edit-role-pill');
    editRolePills.forEach(function(pill) {
        pill.addEventListener('click', function() {
            editRolePills.forEach(function(p) {
                p.classList.remove('filter-selected');
            });
            pill.classList.add('filter-selected');
            const roleValue = pill.getAttribute('data-role-value');
            if (editFormFields.role) {
                editFormFields.role.value = roleValue;
            }
        });
    });

    // Icon pill handlers for Edit modal
    const editInterestPills = document.querySelectorAll('.edit-interest-pill');
    editInterestPills.forEach(function(pill) {
        pill.addEventListener('click', function() {
            editInterestPills.forEach(function(p) {
                p.classList.remove('filter-selected');
            });
            pill.classList.add('filter-selected');
            const interestValue = pill.getAttribute('data-interest-value');
            if (editFormFields.interest) {
                editFormFields.interest.value = interestValue;
            }
        });
    });

    // Icon pill handlers for Add modal
    const addInterestPills = document.querySelectorAll('.add-interest-pill');
    const addInterestInput = document.getElementById('addParticipantFieldOfInterest');
    addInterestPills.forEach(function(pill) {
        pill.addEventListener('click', function() {
            addInterestPills.forEach(function(p) {
                p.classList.remove('filter-selected');
            });
            pill.classList.add('filter-selected');
            const interestValue = pill.getAttribute('data-interest-value');
            if (addInterestInput) {
                addInterestInput.value = interestValue;
            }
        });
    });

    // Role pill handlers for Add modal
    const addRolePills = document.querySelectorAll('.add-role-pill');
    const addRoleInput = document.getElementById('addParticipantRole');
    addRolePills.forEach(function(pill) {
        pill.addEventListener('click', function() {
            addRolePills.forEach(function(p) {
                p.classList.remove('filter-selected');
            });
            pill.classList.add('filter-selected');
            const roleValue = pill.getAttribute('data-role-value');
            if (addRoleInput) {
                addRoleInput.value = roleValue;
            }
        });
    });

    // Phone formatting for modal
    function attachPhoneMask(input) {
        if (!input) return;
        input.addEventListener('input', function () {
            // Strip all non-digits
            let digits = input.value.replace(/\D/g, '');

            // Limit to 10 digits
            if (digits.length > 10) {
                digits = digits.slice(0, 10);
            }

            let formatted = '';
            if (digits.length > 0) {
                formatted = digits.substring(0, 3);
            }
            if (digits.length >= 4) {
                formatted += '-' + digits.substring(3, 6);
            }
            if (digits.length >= 7) {
                formatted += '-' + digits.substring(6, 10);
            }

            input.value = formatted;
        });
    }

    attachPhoneMask(document.getElementById('modalParticipantPhone'));
    attachPhoneMask(document.getElementById('editParticipantPhone'));

    // Progress Modal functionality
    const progressModal = document.getElementById('progressModal');
    const eventsList = document.getElementById('eventsList');
    const milestoneList = document.getElementById('milestoneList');
    const milestoneSummaryCard = document.getElementById('milestoneSummaryCard');
    const donationSummaryCard = document.getElementById('donationSummaryCard');
    const donationList = document.getElementById('donationList');
    const kpiEventsAttended = document.getElementById('kpiEventsAttended');
    const kpiSurveyRate = document.getElementById('kpiSurveyRate');
    const kpiMilestones = document.getElementById('kpiMilestones');
    const kpiDonationsTotal = document.getElementById('kpiDonationsTotal');
    const kpiDonationsCount = document.getElementById('kpiDonationsCount');
    const progressParticipantName = document.getElementById('progressParticipantName');
    const progressUserName = document.getElementById('progressUserName');
    const progressUserEmail = document.getElementById('progressUserEmail');
    const progressUserPhone = document.getElementById('progressUserPhone');
    const progressUserLocation = document.getElementById('progressUserLocation');
    const progressUserSchool = document.getElementById('progressUserSchool');
    const progressUserInterest = document.getElementById('progressUserInterest');

    // Read embedded JSON data
    const dataEl = document.getElementById('userProgressData');
    let participantProgress = {};
    let userData = {};

    if (dataEl) {
        try {
            const data = JSON.parse(dataEl.textContent);
            participantProgress = data.progress || {};
            userData = data.users || {};
        } catch (err) {
            console.error('Error parsing userProgressData JSON:', err);
        }
    }

    function renderList(target, items, emptyMessage) {
        if (!target) return;
        target.innerHTML = '';
        if (!items || items.length === 0) {
            const empty = document.createElement('div');
            empty.className = 'text-muted small';
            empty.textContent = emptyMessage;
            target.appendChild(empty);
            return;
        }
        items.forEach((item) => target.appendChild(item));
    }

    function createBadge(text, variant) {
        const badge = document.createElement('span');
        badge.className = `badge bg-${variant}`;
        badge.textContent = text;
        return badge;
    }

    function formatCurrency(amount) {
        const safeAmount = Number.isFinite(amount) ? amount : 0;
        return `$${safeAmount.toFixed(2)}`;
    }

    const progressButtons = document.querySelectorAll('.user-view-progress-btn');
    progressButtons.forEach((button) => {
        button.addEventListener('click', () => {
            const participantId = button.getAttribute('data-participant-id');
            const data = participantProgress[participantId] || {
                events: [],
                milestones: [],
                donations: [],
                summary: {}
            };
            const user = userData[participantId] || {};

            // Set user details
            if (progressParticipantName) {
                progressParticipantName.textContent = user.name || `User ${participantId}`;
            }
            if (progressUserName) {
                progressUserName.textContent = user.name || 'N/A';
            }
            if (progressUserEmail) {
                progressUserEmail.textContent = user.email || 'N/A';
            }
            if (progressUserPhone) {
                progressUserPhone.textContent = user.phone || 'N/A';
            }
            if (progressUserLocation) {
                const location = [user.city, user.state, user.zip].filter(Boolean).join(', ') || 'N/A';
                progressUserLocation.textContent = location;
            }
            if (progressUserSchool) {
                progressUserSchool.textContent = user.school || 'N/A';
            }
            if (progressUserInterest) {
                progressUserInterest.textContent = user.interest || 'N/A';
            }

            // Set KPIs
            if (kpiEventsAttended) {
                kpiEventsAttended.textContent = data.summary.eventsAttended || 0;
            }
            const surveyRate = data.summary.surveyCompletionRate || 0;
            if (kpiSurveyRate) {
                kpiSurveyRate.textContent = `${surveyRate}%`;
            }
            if (kpiMilestones) {
                kpiMilestones.textContent = data.summary.milestonesTotal || 0;
            }
            if (kpiDonationsTotal) {
                kpiDonationsTotal.textContent = formatCurrency(data.summary.totalDonations || 0);
            }
            if (kpiDonationsCount) {
                kpiDonationsCount.textContent = `${data.summary.donationsCount || 0} gifts`;
            }

            if (milestoneSummaryCard) {
                milestoneSummaryCard.onclick = () => {
                    window.location.href = `/milestones?filterParticipantID=${encodeURIComponent(participantId)}`;
                };
            }
            if (donationSummaryCard) {
                donationSummaryCard.onclick = () => {
                    window.location.href = `/donations?filterParticipantID=${encodeURIComponent(participantId)}`;
                };
            }

            const eventCards = (data.events || []).map((event) => {
                const card = document.createElement('div');
                card.className = 'border rounded p-2';
                const header = document.createElement('div');
                header.className = 'd-flex justify-content-between align-items-center';
                const title = document.createElement('div');
                title.className = 'fw-semibold';
                title.textContent = event.eventName || 'Event';
                const badge = createBadge(
                    event.surveyCompleted ? 'Survey Complete' : 'Survey Pending',
                    event.surveyCompleted ? 'success' : 'danger'
                );
                header.appendChild(title);
                header.appendChild(badge);
                const meta = document.createElement('div');
                meta.className = 'small text-muted';
                meta.textContent = event.eventDate || 'Date TBD';
                card.appendChild(header);
                card.appendChild(meta);
                return card;
            });

            const milestoneCards = (data.milestones || []).map((milestone) => {
                const card = document.createElement('div');
                card.className = 'border rounded p-2';
                const title = document.createElement('div');
                title.className = 'fw-semibold';
                title.textContent = milestone.title || 'Milestone';
                const meta = document.createElement('div');
                meta.className = 'small text-muted';
                meta.textContent =
                    [milestone.category, milestone.date].filter(Boolean).join(' • ') ||
                    'No details';
                card.appendChild(title);
                card.appendChild(meta);
                return card;
            });
            
            const donationCards = (data.donations || []).map((donation) => {
                const card = document.createElement('div');
                card.className =
                    'border rounded p-2 d-flex justify-content-between align-items-center';
                const date = document.createElement('div');
                date.className = 'small text-muted';
                date.textContent = donation.date || 'No date';
                const amount = document.createElement('div');
                amount.className = 'fw-semibold';
                amount.textContent = formatCurrency(donation.amount || 0);
                card.appendChild(date);
                card.appendChild(amount);
                return card;
            });

            renderList(eventsList, eventCards, 'No event history yet.');
            renderList(milestoneList, milestoneCards, 'No milestones recorded.');
            renderList(donationList, donationCards, 'No donations recorded.');
        });
    });
});
