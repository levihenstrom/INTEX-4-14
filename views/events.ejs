<script>
    document.addEventListener('DOMContentLoaded', function() {
        const userSearchSelect = document.getElementById('userSearchSelect');
        const usersList = document.getElementById('usersList');
        
        // Handle user selection
        if (userSearchSelect && usersList) {
            userSearchSelect.addEventListener('change', function() {
                const selectedOption = Array.from(usersList.options).find(option => 
                    option.value === this.value
                );
                
                if (selectedOption) {
                    const participantId = selectedOption.getAttribute('data-participant-id');
                    if (participantId) {
                        // Redirect to events page with selected user and scroll parameter
                        window.location.href = `/events?selectedUserId=${participantId}&scrollToEvents=true`;
                    }
                } else {
                    // User typed in a value, try to find matching participant
                    const inputValue = this.value.toLowerCase();
                    const matchingOption = Array.from(usersList.options).find(option => {
                        const optionValue = option.value.toLowerCase();
                        return optionValue.includes(inputValue) || inputValue.includes(optionValue.split('(')[0].trim().toLowerCase());
                    });
                    
                    if (matchingOption) {
                        const participantId = matchingOption.getAttribute('data-participant-id');
                        if (participantId) {
                            window.location.href = `/events?selectedUserId=${participantId}&scrollToEvents=true`;
                        }
                    }
                }
            });
            
            // Also handle input event for better search experience
            userSearchSelect.addEventListener('input', function() {
                // This allows typing and then selecting from dropdown
            });
        }
        
        // Admin events filter toggle
        const adminToggle = document.getElementById('admin-events-toggle');
        if (adminToggle) {
            const adminCards = Array.from(document.querySelectorAll('#adminUserEventsList .my-event-card'));
            const applyAdminFilter = (filter) => {
                adminCards.forEach(card => {
                    const isPast = card.getAttribute('data-is-past') === 'true';
                    const show = filter === 'past' ? isPast : !isPast;
                    card.style.display = show ? '' : 'none';
                });
            };
            
            adminToggle.querySelectorAll('.toggle-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    adminToggle.querySelectorAll('.toggle-btn').forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    applyAdminFilter(btn.getAttribute('data-filter'));
                });
            });
            
            // Check for scroll and filter parameters in URL
            const urlParams = new URLSearchParams(window.location.search);
            const scrollToEvents = urlParams.get('scrollToEvents') === 'true';
            const showPast = urlParams.get('showPast') === 'true';
            const selectedUserId = urlParams.get('selectedUserId');
            
            // Initialize filter
            if (adminCards.length > 0) {
                if (showPast) {
                    // Activate Past toggle
                    const pastBtn = adminToggle.querySelector('.toggle-btn[data-filter="past"]');
                    if (pastBtn) {
                        adminToggle.querySelectorAll('.toggle-btn').forEach(b => b.classList.remove('active'));
                        pastBtn.classList.add('active');
                        applyAdminFilter('past');
                    }
                } else {
                    // Default to upcoming
                    applyAdminFilter('upcoming');
                }
            }
            
            // Scroll to user events section if requested OR if a user is selected
            if (scrollToEvents || selectedUserId) {
                const userEventsSection = document.querySelector('.admin-user-events-section');
