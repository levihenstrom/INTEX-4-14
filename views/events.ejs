<!-- Upcoming Events Carousel -->
<% if (upcomingEvents && upcomingEvents.length > 0) { %>
<div class="upcoming-events-section">
    <h2 class="upcoming-events-title">Upcoming Events</h2>
    <div class="upcoming-events-carousel-container">
        <button class="carousel-btn carousel-btn-prev" onclick="scrollCarousel('prev')" aria-label="Previous">
            <i class="fa-solid fa-chevron-left"></i>
        </button>
        <div class="upcoming-events-carousel" id="upcomingEventsCarousel">
            <% upcomingEvents.forEach(event => { 
                const startIso = event.EventDateTimeStart ? new Date(event.EventDateTimeStart).toISOString() : '';
                const endIso = event.EventDateTimeEnd ? new Date(event.EventDateTimeEnd).toISOString() : '';
            %>
                <div class="upcoming-event-card">
                    <a href="/registration/<%= event.EventID %>?occurrence=<%= event.OccurrenceID %>" class="upcoming-event-link">
                        <div class="upcoming-event-image">
                            <% const imageSrc = `/images/events/event_${event.EventID}_real.jpg`; %>
                            <img src="<%- imageSrc %>" 
                                 alt="<%= event.EventName %>" 
                                 onerror="this.src='/images/events/event_0_real.png'">
                        </div>
                        <div class="upcoming-event-content">
                            <div class="upcoming-event-header">
                                <h3 class="upcoming-event-name"><%= event.EventName %></h3>
                                <span class="status-badge <%= typeof event.isRegistrationClosed !== 'undefined' && event.isRegistrationClosed ? 'status-closed' : (event.isFull ? 'status-full' : 'status-available') %>">
                                    <i class="fa-solid <%= typeof event.isRegistrationClosed !== 'undefined' && event.isRegistrationClosed ? 'fa-lock' : 'fa-users' %>"></i>
                                    <%= typeof event.isRegistrationClosed !== 'undefined' && event.isRegistrationClosed ? 'Registration Closed' : (event.isFull ? 'Full' : 'Space Available') %>
                                </span>
                            </div>
                            <div class="upcoming-event-details">
                                <% if (event.EventLocation) { %>
                                    <div class="upcoming-event-detail">
                                        <i class="fa-solid fa-location-dot"></i>
                                        <span><%= event.EventLocation %></span>
                                    </div>
                                <% } %>
                                <div class="upcoming-event-detail">
                                    <i class="fa-solid fa-calendar"></i>
                                    <span class="js-local-date"
                                          data-local-date="<%= startIso %>"
                                          data-date-format="weekday-short"></span>
                                </div>
                                <div class="upcoming-event-detail">
                                    <i class="fa-solid fa-clock"></i>
                                    <span class="js-local-time-range"
                                          data-local-range-start="<%= startIso %>"
                                          data-local-range-end="<%= endIso %>"
                                          data-time-format="hour-minute"></span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
        <button class="carousel-btn carousel-btn-next" onclick="scrollCarousel('next')" aria-label="Next">
            <i class="fa-solid fa-chevron-right"></i>
        </button>
    </div>
</div>
<% } %>

