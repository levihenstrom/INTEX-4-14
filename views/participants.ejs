<% if (isAdmin) { %>
    <div class="users-page">
        <h1 class="mb-4">Participant Management</h1>
        
        <!-- Search Box and Add Button - Aligned -->
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <form method="GET" action="/participants" class="d-inline-block" style="max-width: 500px;">
                <input type="hidden" name="sort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>">
                <input type="hidden" name="sortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" id="searchInput" 
                           placeholder="Search participants by name, ID, email..." 
                           value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                    <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                        <a href="/participants?sort=<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>&sortDir=<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>" class="btn btn-outline-secondary">Clear</a>
                    <% } %>
                </div>
            </form>
            <button type="button" class="btn btn-success" style="background-color: #28a745; border-color: #28a745;" data-bs-toggle="modal" data-bs-target="#addUserModal">
            + Add New Participant
        </button>
        </div>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantID')">
                            ID 
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantID') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantFirstName')">
                            First Name
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantFirstName') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantLastName')">
                            Last Name
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantLastName') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantDOB')">
                            Age
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantDOB') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantEmail')">
                            Email
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantEmail') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantPhone')">
                            Phone
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantPhone') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantSchoolOrEmployer')">
                            School/Employer
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantSchoolOrEmployer') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantCity')">
                            City
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantCity') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantFieldOfInterest')">
                            Interest
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantFieldOfInterest') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="participantsTableBody">
                    <% if (typeof participants !== 'undefined' && participants.length > 0) { %>
                        <% participants.forEach(function(participant) { %>
                            <tr class="align-middle">
                                <td><%= participant.ParticipantID %></td>
                                <td><%= participant.ParticipantFirstName || 'N/A' %></td>
                                <td><%= participant.ParticipantLastName || 'N/A' %></td>
                                <td><%= typeof participant.ParticipantAge === 'number' ? participant.ParticipantAge : 'N/A' %></td>
                                <td><%= participant.ParticipantEmail || 'N/A' %></td>
                                <td><%= participant.ParticipantPhone || 'N/A' %></td>
                                <td><%= participant.ParticipantSchoolOrEmployer || 'N/A' %></td>
                                <td><%= participant.ParticipantCity || 'N/A' %></td>
                                <td><%= participant.ParticipantFieldOfInterest || 'N/A' %></td>
                                <td>
                                    <!--View Milestones -->
                                    <button 
                                        type="button" 
                                        class="btn btn-sm btn-primary view-progress-btn" 
                                        data-participant-id="<%= participant.ParticipantID %>" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#progressModal">
                                        View Progress
                                    </button>
                                    
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center">No participants found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    
        <!-- Pagination Info and Controls -->
        <div class="mt-4 d-flex justify-content-between align-items-center">
            <div>
                <% if (typeof currentPage !== 'undefined' && currentPage > 1) { %>
                    <a href="/participants?page=<%= currentPage - 1 %><%= typeof searchTerm !== 'undefined' && searchTerm ? '&search=' + encodeURIComponent(searchTerm) : '' %><%= typeof sortColumn !== 'undefined' ? '&sort=' + sortColumn : '' %><%= typeof sortDir !== 'undefined' ? '&sortDir=' + sortDir : '' %>" class="btn btn-secondary me-2">
                        ← Previous Page
                    </a>
                <% } %>
            </div>
            <div class="text-muted">
                Showing <%= typeof participants !== 'undefined' && participants.length > 0 ? ((currentPage - 1) * 50 + 1) : 0 %> - 
                <%= typeof participants !== 'undefined' && participants.length > 0 ? Math.min(currentPage * 50, totalUsers) : 0 %> 
                of <%= typeof totalUsers !== 'undefined' ? totalUsers : 0 %> participants
                (Page <%= typeof currentPage !== 'undefined' ? currentPage : 1 %> of <%= typeof totalPages !== 'undefined' ? totalPages : 1 %>)
            </div>
            <div>
                <% if (typeof hasNextPage !== 'undefined' && hasNextPage) { %>
                    <a href="/participants?page=<%= currentPage + 1 %><%= typeof searchTerm !== 'undefined' && searchTerm ? '&search=' + encodeURIComponent(searchTerm) : '' %><%= typeof sortColumn !== 'undefined' ? '&sort=' + sortColumn : '' %><%= typeof sortDir !== 'undefined' ? '&sortDir=' + sortDir : '' %>" class="btn btn-primary" id="nextPageBtn">
                        Next Page →
                    </a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Add Participant Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addUserModalLabel">Add New Participant</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addUserForm" action="/participants/add" method="POST">
                    <!-- Name -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantFirstName" class="form-label">First Name *</label>
                            <input type="text" class="form-control" id="modalParticipantFirstName" 
                                name="ParticipantFirstName" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantLastName" class="form-label">Last Name *</label>
                            <input type="text" class="form-control" id="modalParticipantLastName" 
                                name="ParticipantLastName" required>
                        </div>
                    </div>

                    <!-- Email & Password -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantEmail" class="form-label">Email *</label>
                            <input type="email" class="form-control" id="modalParticipantEmail" 
                                   name="ParticipantEmail" required
                                   pattern="[^@\s]+@[^@\s]+\.[^@\s]+"
                                   oninvalid="this.setCustomValidity('Please input a valid email')"
                                   oninput="this.setCustomValidity('')">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantPhone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="modalParticipantPhone" 
                                   name="ParticipantPhone" inputmode="numeric" maxlength="12"
                                   pattern="\d{3}-\d{3}-\d{4}"
                                   title="Phone must be in the format 111-111-1111">
                        </div>
                    </div>

                    <!-- DOB & Phone -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="modalParticipantDOB" class="form-label">Date of Birth *</label>
                            <input type="date" class="form-control" id="modalParticipantDOB" 
                                   name="ParticipantDOB" required>
                        </div>
                        
                    </div>

                    <!-- Location -->
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="modalParticipantCity" class="form-label">City</label>
                            <input type="text" class="form-control" id="modalParticipantCity" 
                                   name="ParticipantCity">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="modalParticipantState" class="form-label">State</label>
                            <input type="text" class="form-control" id="modalParticipantState" 
                                   name="ParticipantState">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="modalParticipantZip" class="form-label">ZIP Code</label>
                            <input type="text" class="form-control" id="modalParticipantZip" 
                                   name="ParticipantZip">
                        </div>
                    </div>

                    <!-- School/Employer -->
                    <div class="mb-3">
                        <label for="modalParticipantSchoolOrEmployer" class="form-label">School or Employer</label>
                        <input type="text" class="form-control" id="modalParticipantSchoolOrEmployer" 
                               name="ParticipantSchoolOrEmployer">
                    </div>

                    <!-- Field of Interest -->
                    <div class="mb-3">
                        <label class="form-label">Field of Interest</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                   id="modal_interest_stem" value="STEM">
                            <label class="form-check-label" for="modal_interest_stem">STEM</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                   id="modal_interest_arts" value="Arts">
                            <label class="form-check-label" for="modal_interest_arts">Arts</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                   id="modal_interest_both" value="Both">
                            <label class="form-check-label" for="modal_interest_both">Both</label>
                        </div>
                    </div>

                    <input type="hidden" name="ParticipantRole" value="p">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="addUserForm" class="btn btn-success">Create Participant</button>
            </div>
        </div>
    </div>
</div>

<!-- Progress Modal -->
