<% if (isAdmin) { %>
    <div class="users-page">
        <h1 class="mb-4">Participant Management</h1>
        
        <!-- Search Box and Add Button - Aligned -->
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <form method="GET" action="/participants" class="d-inline-block" style="max-width: 500px;">
                <input type="hidden" name="sort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>">
                <input type="hidden" name="sortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" id="searchInput" 
                           placeholder="Search participants by name, ID, email..." 
                           value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                    <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                        <a href="/participants?sort=<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>&sortDir=<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>" class="btn btn-outline-secondary">Clear</a>
                    <% } %>
                </div>
            </form>
        </div>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
    
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantID')">
                            ID 
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantID') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantFirstName')">
                            First Name
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantFirstName') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantLastName')">
                            Last Name
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantLastName') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantEmail')">
                            Email
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantEmail') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantSchoolOrEmployer')">
                            School/Employer
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantSchoolOrEmployer') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable('ParticipantCity')">
                            City
                            <% if (typeof sortColumn !== 'undefined' && sortColumn === 'ParticipantCity') { %>
                                <%= typeof sortDir !== 'undefined' && sortDir === 'desc' ? '▼' : '▲' %>
                            <% } %>
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="participantsTableBody">
                    <% if (typeof participants !== 'undefined' && participants.length > 0) { %>
                        <% participants.forEach(function(participant) { %>
                            <tr>
                                <td><%= participant.ParticipantID %></td>
                                <td><%= participant.ParticipantFirstName || 'N/A' %></td>
                                <td><%= participant.ParticipantLastName || 'N/A' %></td>
                                <td><%= participant.ParticipantEmail || 'N/A' %></td>
                                <td><%= participant.ParticipantSchoolOrEmployer || 'N/A' %></td>
                                <td><%= participant.ParticipantCity || 'N/A' %></td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-primary edit-participant-btn" 
                                            data-participant-id="<%= participant.ParticipantID %>"
                                            data-first-name="<%= participant.ParticipantFirstName || '' %>"
                                            data-last-name="<%= participant.ParticipantLastName || '' %>"
                                            data-dob="<%= participant.ParticipantDOB || '' %>"
                                            data-phone="<%= participant.ParticipantPhone || '' %>"
                                            data-city="<%= participant.ParticipantCity || '' %>"
                                            data-state="<%= participant.ParticipantState || '' %>"
                                            data-zip="<%= participant.ParticipantZip || '' %>"
                                            data-school="<%= participant.ParticipantSchoolOrEmployer || '' %>"
                                            data-interest="<%= participant.ParticipantFieldOfInterest || '' %>"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#editParticipantModal"
                                            style="min-width: 80px;">
                                        Edit
                                    </button>
                                    <button type="button" class="btn btn-sm btn-danger ms-2 delete-participant-btn" 
                                            data-participant-id="<%= participant.ParticipantID %>"
                                            data-participant-name="<%= participant.ParticipantFirstName %> <%= participant.ParticipantLastName %>"
                                            data-preserve-search="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                                            data-preserve-sort="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>"
                                            data-preserve-sort-dir="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>"
                                            data-preserve-page="<%= typeof currentPage !== 'undefined' ? currentPage : 1 %>"
                                            style="min-width: 80px;">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center">No participants found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    
        <!-- Pagination Info and Controls -->
        <div class="mt-4 d-flex justify-content-between align-items-center">
            <div>
                <% if (typeof currentPage !== 'undefined' && currentPage > 1) { %>
                    <a href="/participants?page=<%= currentPage - 1 %><%= typeof searchTerm !== 'undefined' && searchTerm ? '&search=' + encodeURIComponent(searchTerm) : '' %><%= typeof sortColumn !== 'undefined' ? '&sort=' + sortColumn : '' %><%= typeof sortDir !== 'undefined' ? '&sortDir=' + sortDir : '' %>" class="btn btn-secondary me-2">
                        ← Previous Page
                    </a>
                <% } %>
            </div>
            <div class="text-muted">
                Showing <%= typeof participants !== 'undefined' && participants.length > 0 ? ((currentPage - 1) * 50 + 1) : 0 %> - 
                <%= typeof participants !== 'undefined' && participants.length > 0 ? Math.min(currentPage * 50, totalUsers) : 0 %> 
                of <%= typeof totalUsers !== 'undefined' ? totalUsers : 0 %> participants
                (Page <%= typeof currentPage !== 'undefined' ? currentPage : 1 %> of <%= typeof totalPages !== 'undefined' ? totalPages : 1 %>)
            </div>
            <div>
                <% if (typeof hasNextPage !== 'undefined' && hasNextPage) { %>
                    <a href="/participants?page=<%= currentPage + 1 %><%= typeof searchTerm !== 'undefined' && searchTerm ? '&search=' + encodeURIComponent(searchTerm) : '' %><%= typeof sortColumn !== 'undefined' ? '&sort=' + sortColumn : '' %><%= typeof sortDir !== 'undefined' ? '&sortDir=' + sortDir : '' %>" class="btn btn-primary" id="nextPageBtn">
                        Next Page →
                    </a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Edit Participant Modal -->
    <div class="modal fade" id="editParticipantModal" tabindex="-1" aria-labelledby="editParticipantModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editParticipantModalLabel">Edit Participant</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editParticipantForm" action="/participants" method="POST">
                        <input type="hidden" name="participantId" id="editParticipantId">
                        <input type="hidden" name="preserveSearch" value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                        <input type="hidden" name="preserveSort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'ParticipantID' %>">
                        <input type="hidden" name="preserveSortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'asc' %>">
                        <input type="hidden" name="preservePage" value="<%= typeof currentPage !== 'undefined' ? currentPage : 1 %>">
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantFirstName" class="form-label">First Name *</label>
                                <input type="text" class="form-control" id="editParticipantFirstName" 
                                       name="ParticipantFirstName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantLastName" class="form-label">Last Name *</label>
                                <input type="text" class="form-control" id="editParticipantLastName" 
                                       name="ParticipantLastName" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantDOB" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="editParticipantDOB" 
                                       name="ParticipantDOB">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editParticipantPhone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="editParticipantPhone" 
                                       name="ParticipantPhone" inputmode="numeric" maxlength="12"
                                       pattern="\d{3}-\d{3}-\d{4}"
                                       title="Phone must be in the format 111-111-1111">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="editParticipantCity" class="form-label">City</label>
                                <input type="text" class="form-control" id="editParticipantCity" 
                                       name="ParticipantCity">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="editParticipantState" class="form-label">State</label>
                                <input type="text" class="form-control" id="editParticipantState" 
                                       name="ParticipantState">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="editParticipantZip" class="form-label">ZIP Code</label>
                                <input type="text" class="form-control" id="editParticipantZip" 
                                       name="ParticipantZip">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="editParticipantSchoolOrEmployer" class="form-label">School or Employer</label>
                            <input type="text" class="form-control" id="editParticipantSchoolOrEmployer" 
                                   name="ParticipantSchoolOrEmployer">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Field of Interest</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                       id="edit_interest_stem" value="STEM">
                                <label class="form-check-label" for="edit_interest_stem">STEM</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                       id="edit_interest_arts" value="Arts">
                                <label class="form-check-label" for="edit_interest_arts">Arts</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                       id="edit_interest_both" value="Both">
                                <label class="form-check-label" for="edit_interest_both">Both</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" form="editParticipantForm" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
    
    <script>
    function sortTable(column) {
        const urlParams = new URLSearchParams(window.location.search);
        const currentSort = urlParams.get('sort') || 'ParticipantID';
        const currentSortDir = urlParams.get('sortDir') || 'asc';
        
        let newSortDir = 'asc';
        if (currentSort === column && currentSortDir === 'asc') {
            newSortDir = 'desc';
        }
        
        urlParams.set('sort', column);
        urlParams.set('sortDir', newSortDir);
        urlParams.set('page', '1');
        
        window.location.href = '/participants?' + urlParams.toString();
    }
    
    document.addEventListener('DOMContentLoaded', function() {
        // Edit button handlers - load participant data into modal
        const editButtons = document.querySelectorAll('.edit-participant-btn');
        editButtons.forEach(function(button) {
            button.addEventListener('click', function() {
                // Load all data from data attributes
                document.getElementById('editParticipantId').value = button.getAttribute('data-participant-id');
                document.getElementById('editParticipantFirstName').value = button.getAttribute('data-first-name');
                document.getElementById('editParticipantLastName').value = button.getAttribute('data-last-name');
                document.getElementById('editParticipantDOB').value = button.getAttribute('data-dob');
                document.getElementById('editParticipantPhone').value = button.getAttribute('data-phone');
                document.getElementById('editParticipantCity').value = button.getAttribute('data-city');
                document.getElementById('editParticipantState').value = button.getAttribute('data-state');
                document.getElementById('editParticipantZip').value = button.getAttribute('data-zip');
                document.getElementById('editParticipantSchoolOrEmployer').value = button.getAttribute('data-school');
                
                // Set field of interest radio button
                const interest = button.getAttribute('data-interest');
                document.querySelectorAll('input[name="ParticipantFieldOfInterest"]').forEach(function(radio) {
                    radio.checked = (radio.value === interest);
                });
            });
        });

        // Delete participant button handlers
        const deleteButtons = document.querySelectorAll('.delete-participant-btn');
        deleteButtons.forEach(function(button) {
            button.addEventListener('click', function(e) {
                const participantId = button.getAttribute('data-participant-id');
                const participantName = button.getAttribute('data-participant-name');
                const preserveSearch = button.getAttribute('data-preserve-search') || '';
                const preserveSort = button.getAttribute('data-preserve-sort') || 'ParticipantID';
                const preserveSortDir = button.getAttribute('data-preserve-sort-dir') || 'asc';
                const preservePage = button.getAttribute('data-preserve-page') || '1';
                const message = 'Are you sure you want to delete participant \'' + participantName + '\'? This action cannot be undone.';
                
                if (confirm(message)) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/participants/delete';
                    
                    const fields = {
                        participantId: participantId,
                        preserveSearch: preserveSearch,
                        preserveSort: preserveSort,
                        preserveSortDir: preserveSortDir,
                        preservePage: preservePage
                    };
                    
                    for (const [name, value] of Object.entries(fields)) {
                        const input = document.createElement('input');
                        input.type = 'hidden';
                        input.name = name;
                        input.value = value;
                        form.appendChild(input);
                    }
                    
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        });

        // Phone formatting for edit modal
        const editPhoneInput = document.getElementById('editParticipantPhone');
        if (editPhoneInput) {
            editPhoneInput.addEventListener('input', function () {
                let digits = editPhoneInput.value.replace(/\D/g, '');
                if (digits.length > 10) {
                    digits = digits.slice(0, 10);
                }
                let formatted = '';
                if (digits.length > 0) {
                    formatted = digits.substring(0, 3);
                }
                if (digits.length >= 4) {
                    formatted += '-' + digits.substring(3, 6);
                }
                if (digits.length >= 7) {
                    formatted += '-' + digits.substring(6, 10);
                }
                editPhoneInput.value = formatted;
            });
        }
    });
    </script>
    
<% } else if (user) { %>
    <!-- Regular User View: Show their own profile -->
    <div class="participants-page">
        <h1 class="mb-4">My Profile</h1>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <form action="/participants" method="POST">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="userParticipantFirstName" class="form-label">First Name *</label>
                                    <input type="text" class="form-control" id="userParticipantFirstName" 
                                           name="ParticipantFirstName" 
                                           value="<%= participant.ParticipantFirstName || '' %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="userParticipantLastName" class="form-label">Last Name *</label>
                                    <input type="text" class="form-control" id="userParticipantLastName" 
                                           name="ParticipantLastName" 
                                           value="<%= participant.ParticipantLastName || '' %>" required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="userParticipantEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="userParticipantEmail" 
                                       value="<%= participant.ParticipantEmail || '' %>" disabled>
                                <small class="form-text text-muted">Email cannot be changed</small>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="userParticipantDOB" class="form-label">Date of Birth</label>
                                    <input type="date" class="form-control" id="userParticipantDOB" 
                                           name="ParticipantDOB" 
                                           value="<%= participant.ParticipantDOB || '' %>">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="userParticipantPhone" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" id="userParticipantPhone" 
                                           name="ParticipantPhone" inputmode="numeric" maxlength="12"
                                           pattern="\d{3}-\d{3}-\d{4}"
                                           title="Phone must be in the format 111-111-1111"
                                           value="<%= participant.ParticipantPhone || '' %>">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="userParticipantCity" class="form-label">City</label>
                                    <input type="text" class="form-control" id="userParticipantCity" 
                                           name="ParticipantCity" 
                                           value="<%= participant.ParticipantCity || '' %>">
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="userParticipantState" class="form-label">State</label>
                                    <input type="text" class="form-control" id="userParticipantState" 
                                           name="ParticipantState" 
                                           value="<%= participant.ParticipantState || '' %>">
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="userParticipantZip" class="form-label">ZIP Code</label>
                                    <input type="text" class="form-control" id="userParticipantZip" 
                                           name="ParticipantZip" 
                                           value="<%= participant.ParticipantZip || '' %>">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="userParticipantSchoolOrEmployer" class="form-label">School or Employer</label>
                                <input type="text" class="form-control" id="userParticipantSchoolOrEmployer" 
                                       name="ParticipantSchoolOrEmployer" 
                                       value="<%= participant.ParticipantSchoolOrEmployer || '' %>">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Field of Interest</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                           id="user_interest_stem" value="STEM"
                                           <%= participant.ParticipantFieldOfInterest === 'STEM' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="user_interest_stem">STEM</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                           id="user_interest_arts" value="Arts"
                                           <%= participant.ParticipantFieldOfInterest === 'Arts' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="user_interest_arts">Arts</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ParticipantFieldOfInterest" 
                                           id="user_interest_both" value="Both"
                                           <%= participant.ParticipantFieldOfInterest === 'Both' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="user_interest_both">Both</label>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Update Profile</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Phone formatting
        const userPhoneInput = document.getElementById('userParticipantPhone');
        if (userPhoneInput) {
            userPhoneInput.addEventListener('input', function () {
                let digits = userPhoneInput.value.replace(/\D/g, '');
                if (digits.length > 10) {
                    digits = digits.slice(0, 10);
                }
                let formatted = '';
                if (digits.length > 0) {
                    formatted = digits.substring(0, 3);
                }
                if (digits.length >= 4) {
                    formatted += '-' + digits.substring(3, 6);
                }
                if (digits.length >= 7) {
                    formatted += '-' + digits.substring(6, 10);
                }
                userPhoneInput.value = formatted;
            });
        }
    });
    </script>
<% } else { %>
    <!-- Not logged in - should not reach here due to middleware -->
    <div class="alert alert-warning">
        Please log in to view your profile.
    </div>
<% } %>
