                            <div class="col-md-6">
                                <label class="form-label">Instructor *</label>
                                <input type="number" class="form-control" id="editSurveyInstructor" name="SurveyInstructorScore" min="0" max="5" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Recommendation *</label>
                                <input type="number" class="form-control" id="editSurveyRecommendation" name="SurveyRecommendationScore" min="0" max="5" required>
                            </div>
                        </div>
                        <div class="mb-3 mt-3">
                            <label class="form-label">Comments</label>
                            <textarea class="form-control" id="editSurveyComments" name="SurveyComments" rows="3"></textarea>
                        </div>
                        <div class="mb-0">
                            <label class="form-label">Submission Date</label>
                            <input type="date" class="form-control" id="editSurveySubmissionDate" name="SurveySubmissionDate">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary surveys-modal-cancel-btn" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" form="editSurveyForm" class="btn btn-primary surveys-modal-save-btn">Update Survey</button>
                </div>
            </div>
        </div>
    </div>

        <!-- Delete Survey Confirmation Modal -->
        <div class="reg-confirm-backdrop" id="deleteSurveyConfirmBackdrop" aria-modal="true" role="dialog">
            <div class="reg-confirm-modal">
                <h4 class="modal-confirm-title">Confirm Delete</h4>
                <p id="deleteSurveyConfirmMessage" class="modal-confirm-message">Are you sure?</p>
                <div class="reg-confirm-actions">
                    <button type="button" class="btn btn-outline-secondary" id="deleteSurveyConfirmNo">Cancel</button>
                    <button type="button" class="btn btn-danger" id="deleteSurveyConfirmYes">Delete</button>
                </div>
            </div>
        </div>
    <% } %>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add Survey Modal - Registration Search
    const addRegistrationSearch = document.getElementById('addSurveyRegistrationSearch');
    const addRegistrationResults = document.getElementById('addSurveyRegistrationResults');
    const addRegistrationIdInput = document.getElementById('addSurveyRegistrationId');
    let addActiveRegistrationId = null;

    // Registration search functionality for surveys
    function setupRegistrationSearch(searchInput, searchResults, registrationIdInput, activeIdObj) {
        if (!searchInput || !searchResults || !registrationIdInput) return;

        const hideResults = () => {
            if (searchResults) searchResults.style.display = 'none';
        };

        const showResults = () => {
            if (searchResults) searchResults.style.display = 'block';
        };

        searchInput.addEventListener('input', async () => {
            const q = searchInput.value.trim();
            if (activeIdObj) activeIdObj.value = null;
            if (!q || !searchResults) {
                hideResults();
                registrationIdInput.value = '';
                return;
            }
            try {
                // Search registrations (participant name, event name, or date)
                const registrationOptions = <%- JSON.stringify(registrationChoices || []) %>;
                searchResults.innerHTML = '';
                const filtered = registrationOptions.filter(reg => {
                    const searchText = `${reg.ParticipantFirstName} ${reg.ParticipantLastName} ${reg.EventName || ''}`.toLowerCase();
                    return searchText.includes(q.toLowerCase());
                });
                
                if (filtered.length === 0) {
                    hideResults();
                    return;
                }
                
                filtered.forEach(reg => {
                    const div = document.createElement('div');
                    div.className = 'result-item';
                    const dateStr = reg.EventDateTimeStart ? new Date(reg.EventDateTimeStart).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : 'Date TBD';
                    div.textContent = `${reg.ParticipantFirstName} ${reg.ParticipantLastName} - ${reg.EventName} (${dateStr})`;
                    div.addEventListener('click', () => {
                        searchInput.value = `${reg.ParticipantFirstName} ${reg.ParticipantLastName} - ${reg.EventName} (${dateStr})`;
                        if (activeIdObj) activeIdObj.value = reg.RegistrationID;
                        registrationIdInput.value = reg.RegistrationID;
                        hideResults();
                    });
                    searchResults.appendChild(div);
                });
                showResults();
            } catch (err) {
                console.error(err);
                hideResults();
            }
        });

        document.addEventListener('click', (e) => {
            if (searchResults && !searchResults.contains(e.target) && e.target !== searchInput) {
                hideResults();
            }
        });
    }

    // Setup search for add survey modal
    const addActiveRegistrationIdObj = { value: null };
    setupRegistrationSearch(addRegistrationSearch, addRegistrationResults, addRegistrationIdInput, addActiveRegistrationIdObj);

    // Survey slider value updates
    const addSurveySatisfaction = document.getElementById('addSurveySatisfaction');
    const addSurveySatisfactionValue = document.getElementById('addSurveySatisfactionValue');
    const addSurveyUsefulness = document.getElementById('addSurveyUsefulness');
    const addSurveyUsefulnessValue = document.getElementById('addSurveyUsefulnessValue');
    const addSurveyInstructor = document.getElementById('addSurveyInstructor');
    const addSurveyInstructorValue = document.getElementById('addSurveyInstructorValue');
    const addSurveyRecommendation = document.getElementById('addSurveyRecommendation');
    const addSurveyRecommendationValue = document.getElementById('addSurveyRecommendationValue');

    if (addSurveySatisfaction && addSurveySatisfactionValue) {
        addSurveySatisfaction.addEventListener('input', (e) => {
            addSurveySatisfactionValue.textContent = e.target.value;
        });
    }
    if (addSurveyUsefulness && addSurveyUsefulnessValue) {
        addSurveyUsefulness.addEventListener('input', (e) => {
            addSurveyUsefulnessValue.textContent = e.target.value;
        });
    }
    if (addSurveyInstructor && addSurveyInstructorValue) {
        addSurveyInstructor.addEventListener('input', (e) => {
            addSurveyInstructorValue.textContent = e.target.value;
        });
    }
    if (addSurveyRecommendation && addSurveyRecommendationValue) {
        addSurveyRecommendation.addEventListener('input', (e) => {
            addSurveyRecommendationValue.textContent = e.target.value;
        });
    }

    // Reset add survey modal when opened
    const addSurveyModal = document.getElementById('addSurveyModal');
    if (addSurveyModal) {
        addSurveyModal.addEventListener('show.bs.modal', function() {
            if (addRegistrationSearch) addRegistrationSearch.value = '';
            if (addRegistrationIdInput) addRegistrationIdInput.value = '';
            if (addActiveRegistrationIdObj) addActiveRegistrationIdObj.value = null;
            if (addRegistrationResults) addRegistrationResults.style.display = 'none';
            // Reset sliders to default value of 3
            if (addSurveySatisfaction) {
                addSurveySatisfaction.value = '3';
                if (addSurveySatisfactionValue) addSurveySatisfactionValue.textContent = '3';
            }
            if (addSurveyUsefulness) {
                addSurveyUsefulness.value = '3';
                if (addSurveyUsefulnessValue) addSurveyUsefulnessValue.textContent = '3';
            }
            if (addSurveyInstructor) {
                addSurveyInstructor.value = '3';
                if (addSurveyInstructorValue) addSurveyInstructorValue.textContent = '3';
            }
            if (addSurveyRecommendation) {
                addSurveyRecommendation.value = '3';
                if (addSurveyRecommendationValue) addSurveyRecommendationValue.textContent = '3';
            }
        });
    }

    // Edit survey button click handler
    const editSurveyModal = document.getElementById('editSurveyModal');
    let editModalInstance = null;
    if (editSurveyModal && typeof bootstrap !== 'undefined') {
        editModalInstance = new bootstrap.Modal(editSurveyModal);
    }

    const editSurveyIdInput = document.getElementById('editSurveyId');
    const editSurveyRegistrationInfo = document.getElementById('editSurveyRegistrationInfo');
    const editSatisfactionInput = document.getElementById('editSurveySatisfaction');
    const editUsefulnessInput = document.getElementById('editSurveyUsefulness');
    const editInstructorInput = document.getElementById('editSurveyInstructor');
    const editRecommendationInput = document.getElementById('editSurveyRecommendation');
    const editCommentsInput = document.getElementById('editSurveyComments');
    const editSubmissionInput = document.getElementById('editSurveySubmissionDate');

    document.querySelectorAll('.survey-edit-btn').forEach(function(button) {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            const surveyId = this.getAttribute('data-survey-id') || '';
            const satisfaction = this.getAttribute('data-satisfaction') || '';
            const usefulness = this.getAttribute('data-usefulness') || '';
            const instructor = this.getAttribute('data-instructor') || '';
            const recommendation = this.getAttribute('data-recommendation') || '';
            const comments = this.getAttribute('data-comments') || '';
            const submission = this.getAttribute('data-submission') || '';
            const registrationLabel = this.getAttribute('data-registration-label') || 'Registration details unavailable';

            // Set survey ID
            if (editSurveyIdInput) editSurveyIdInput.value = surveyId;

            // Set scores
            if (editSatisfactionInput) editSatisfactionInput.value = satisfaction;
            if (editUsefulnessInput) editUsefulnessInput.value = usefulness;
            if (editInstructorInput) editInstructorInput.value = instructor;
            if (editRecommendationInput) editRecommendationInput.value = recommendation;

            // Set comments
            if (editCommentsInput) editCommentsInput.value = comments;

            // Set submission date
            if (editSubmissionInput) editSubmissionInput.value = submission;

            // Set registration info
            if (editSurveyRegistrationInfo) {
                editSurveyRegistrationInfo.textContent = registrationLabel;
            }

            // Open modal after values are set
            if (editModalInstance) {
                editModalInstance.show();
            } else if (editSurveyModal) {
                editSurveyModal.classList.add('show');
                editSurveyModal.style.display = 'block';
            }
        });
    });

    // Delete survey confirmation modal
    const deleteConfirmBackdrop = document.getElementById('deleteSurveyConfirmBackdrop');
    const deleteConfirmMessage = document.getElementById('deleteSurveyConfirmMessage');
    const deleteConfirmYes = document.getElementById('deleteSurveyConfirmYes');
    const deleteConfirmNo = document.getElementById('deleteSurveyConfirmNo');
    let pendingDeleteForm = null;

    const openDeleteConfirm = (form, eventName) => {
        if (!deleteConfirmBackdrop || !deleteConfirmMessage) {
            if (confirm('Delete survey for ' + eventName + '?')) {
                form.submit();
            }
            return;
        }
        pendingDeleteForm = form;
        deleteConfirmMessage.textContent = 'Delete survey for ' + eventName + '?';
        deleteConfirmBackdrop.classList.add('active');
    };

    if (deleteConfirmYes) {
        deleteConfirmYes.addEventListener('click', function() {
            if (pendingDeleteForm) {
                pendingDeleteForm.submit();
            }
            if (deleteConfirmBackdrop) {
                deleteConfirmBackdrop.classList.remove('active');
            }
            pendingDeleteForm = null;
        });
    }

    if (deleteConfirmNo) {
        deleteConfirmNo.addEventListener('click', function() {
            if (deleteConfirmBackdrop) {
                deleteConfirmBackdrop.classList.remove('active');
            }
            pendingDeleteForm = null;
        });
    }

    if (deleteConfirmBackdrop) {
        deleteConfirmBackdrop.addEventListener('click', (e) => {
            if (e.target === deleteConfirmBackdrop) {
                deleteConfirmBackdrop.classList.remove('active');
                pendingDeleteForm = null;
            }
        });
    }

    // Delete survey button click handler
    document.querySelectorAll('.survey-delete-btn').forEach(function(button) {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            const surveyId = this.getAttribute('data-survey-id');
            const eventName = this.getAttribute('data-event') || 'this survey';
            
            const form = document.createElement('form');
            form.action = '/surveys/delete';
            form.method = 'POST';
            const csrfInput = document.createElement('input');
            csrfInput.type = 'hidden';
            csrfInput.name = '_csrf';
            csrfInput.value = '<%= csrfToken %>';
            form.appendChild(csrfInput);
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'SurveyID';
            input.value = surveyId;
            form.appendChild(input);
            document.body.appendChild(form);
            
            openDeleteConfirm(form, eventName);
        });
    });

    // Event type filter pill handlers
    const eventTypePills = document.querySelectorAll('.survey-event-type-pill');
    const eventTypeInput = document.getElementById('surveyFilterEventTypeInput');
    eventTypePills.forEach(pill => {
        pill.addEventListener('click', function() {
            eventTypePills.forEach(p => p.classList.remove('filter-selected'));
            this.classList.add('filter-selected');
            const value = this.getAttribute('data-event-type');
            if (eventTypeInput) eventTypeInput.value = value || '';
        });
    });

    // Participant role filter pill handlers
    const rolePills = document.querySelectorAll('.survey-role-pill');
    const roleInput = document.getElementById('surveyFilterRoleInput');
    rolePills.forEach(pill => {
        pill.addEventListener('click', function() {
            rolePills.forEach(p => p.classList.remove('filter-selected'));
            this.classList.add('filter-selected');
            const value = this.getAttribute('data-role-value');
            if (roleInput) roleInput.value = value || '';
        });
    });

    // City/State/Event Title filter search selectors
    const citySearchInput = document.getElementById('surveysFilterCitySearch');
    const citySearchResults = document.getElementById('surveysFilterCityResults');
    const cityInput = document.getElementById('surveysFilterCityInput');
    const stateSearchInput = document.getElementById('surveysFilterStateSearch');
    const stateSearchResults = document.getElementById('surveysFilterStateResults');
    const stateInput = document.getElementById('surveysFilterStateInput');
    const eventTitleSearchInput = document.getElementById('surveysFilterEventTitleSearch');
    const eventTitleSearchResults = document.getElementById('surveysFilterEventTitleResults');
    const eventTitleInput = document.getElementById('surveysFilterEventTitleInput');

    function setupFilterSearch(searchInput, searchResults, hiddenInput, options, showAllOnFocus = false) {
        if (!searchInput || !searchResults || !hiddenInput) return;

        const hideResults = () => {
            if (searchResults) searchResults.style.display = 'none';
        };

        const showResults = () => {
            if (searchResults) searchResults.style.display = 'block';
        };

        const filterAndDisplay = (q = '') => {
            const searchTerm = q.toLowerCase().trim();
            const filtered = options.filter(opt => 
                opt.toLowerCase().includes(searchTerm)
            );
            
            searchResults.innerHTML = '';
            if (filtered.length === 0 && searchTerm) {
                hideResults();
                return;
            }
            
            filtered.forEach(opt => {
                const div = document.createElement('div');
                div.className = 'result-item';
                div.textContent = opt;
                div.addEventListener('click', () => {
                    searchInput.value = opt;
                    hiddenInput.value = opt;
                    hideResults();
                });
                searchResults.appendChild(div);
            });
            showResults();
        };

        searchInput.addEventListener('input', () => {
            const q = searchInput.value.trim();
            filterAndDisplay(q);
        });

        if (showAllOnFocus) {
            searchInput.addEventListener('focus', () => {
                filterAndDisplay(searchInput.value.trim());
            });
        }

        document.addEventListener('click', (e) => {
            if (searchResults && !searchResults.contains(e.target) && e.target !== searchInput) {
                hideResults();
            }
        });
    }

    const uniqueCities = <%- JSON.stringify(uniqueCities || []) %>;
    const uniqueStates = <%- JSON.stringify(uniqueStates || []) %>;
    const eventTitles = <%- JSON.stringify(eventTitles || []) %>;
    
    if (citySearchInput && citySearchResults && cityInput) {
        setupFilterSearch(citySearchInput, citySearchResults, cityInput, uniqueCities);
    }
    if (stateSearchInput && stateSearchResults && stateInput) {
        setupFilterSearch(stateSearchInput, stateSearchResults, stateInput, uniqueStates);
    }
    if (eventTitleSearchInput && eventTitleSearchResults && eventTitleInput) {
        setupFilterSearch(eventTitleSearchInput, eventTitleSearchResults, eventTitleInput, eventTitles, true); // Show all on focus
    }

    // Age range slider (same as donations/milestones)
    const ageWrapper = document.querySelector('#surveyAgeMinSlider')?.closest('.surveys-dual-range-wrapper');
    if (ageWrapper) {
        const minSlider = document.getElementById('surveyAgeMinSlider');
        const maxSlider = document.getElementById('surveyAgeMaxSlider');
        const minInput = document.querySelector('input[name="filterMinAge"]');
        const maxInput = document.querySelector('input[name="filterMaxAge"]');
        
        if (minSlider && maxSlider && minInput && maxInput) {
            function updateAgeRange() {
                const min = parseFloat(minSlider.value);
                const max = parseFloat(maxSlider.value);
                if (min > max) {
                    minSlider.value = max;
                    minInput.value = max.toString();
                } else {
                    minInput.value = min.toString();
                }
                if (max < min) {
                    maxSlider.value = min;
                    maxInput.value = min.toString();
                } else {
                    maxInput.value = max.toString();
                }
            }
            minSlider.addEventListener('input', updateAgeRange);
            maxSlider.addEventListener('input', updateAgeRange);
            minInput.addEventListener('input', () => {
                const val = parseFloat(minInput.value) || 0;
                minSlider.value = Math.max(0, Math.min(100, val));
                updateAgeRange();
            });
            maxInput.addEventListener('input', () => {
                const val = parseFloat(maxInput.value) || 100;
                maxSlider.value = Math.max(0, Math.min(100, val));
                updateAgeRange();
            });
        }
    }

    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.forEach(function(triggerEl) {
        new bootstrap.Tooltip(triggerEl);
    });
});
</script>

