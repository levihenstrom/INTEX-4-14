        <h1>SURVEYS</h1>
        <p>Understand participant satisfaction and follow-up. Gather valuable feedback to improve programs and measure the impact of our workshops and events on each participant's journey.</p>
    </div>

    <!-- Survey NPS Distribution Chart -->
    <% if (isAdmin) { %>
        <div class="row mb-4">
            <div class="col-12">
                <div style="position: relative; height: 180px; width: 100%;">
                    <canvas id="surveysRadarChart"></canvas>
                </div>
            </div>
        </div>
    <% } %>

    <div class="row g-3 mb-4">
