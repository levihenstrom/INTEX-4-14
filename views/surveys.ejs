                                                </div>
                                                <div class="surveys-range-input-group">
                                                    <label class="surveys-range-label">To</label>
                                                    <input type="date" class="form-control surveys-range-input" name="filterEndDate" value="<%= filterValues.filterEndDate || '' %>">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Event Date Range -->
                                    <div class="surveys-filter-group">
                                        <label class="surveys-filter-group-label">Event Date Range</label>
                                        <div class="surveys-range-controls">
                                            <div class="surveys-range-slider-row">
                                                <div class="surveys-range-input-group">
