                                        <label class="surveys-filter-group-label">Location</label>
                                        <div class="surveys-range-controls">
                                            <div class="surveys-range-slider-row">
                                                <div class="surveys-range-input-group filter-input-relative">
                                                    <label class="surveys-range-label">City</label>
                                                    <input type="text" class="form-control reg-participant-search surveys-range-input" id="surveysFilterCitySearch" placeholder="Search city..." value="<%= filterValues.filterCity || '' %>" autocomplete="off">
                                                    <div class="reg-search-results" id="surveysFilterCityResults"></div>
                                                    <input type="hidden" name="filterCity" id="surveysFilterCityInput" value="<%= filterValues.filterCity || '' %>">
                                                </div>
                                                <div class="surveys-range-input-group filter-input-relative">
                                                    <label class="surveys-range-label">State</label>
                                                    <input type="text" class="form-control reg-participant-search surveys-range-input" id="surveysFilterStateSearch" placeholder="Search state..." value="<%= filterValues.filterState || '' %>" autocomplete="off">
                                                    <div class="reg-search-results" id="surveysFilterStateResults"></div>
                                                    <input type="hidden" name="filterState" id="surveysFilterStateInput" value="<%= filterValues.filterState || '' %>">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Age Range -->
                                    <div class="surveys-filter-group">
                                        <label class="surveys-filter-group-label">Age Range</label>
