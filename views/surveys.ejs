                                                    <input type="range" class="surveys-dual-range surveys-dual-range-min" id="surveyAgeMinSlider" min="0" max="100" step="1" value="<%= filterValues.filterMinAge ? Math.min(parseInt(filterValues.filterMinAge), 100) : 0 %>">
                                                    <input type="range" class="surveys-dual-range surveys-dual-range-max" id="surveyAgeMaxSlider" min="0" max="100" step="1" value="<%= filterValues.filterMaxAge ? Math.min(parseInt(filterValues.filterMaxAge), 100) : 100 %>">
                                                </div>
                                                <div class="surveys-range-input-group surveys-range-input-group-max">
                                                    <label class="surveys-range-label">Max</label>
                                                    <input type="text" class="form-control surveys-range-input" name="filterMaxAge" value="<%= filterValues.filterMaxAge || '' %>" placeholder="max">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Event Title -->
                                    <div class="surveys-filter-group filter-input-relative">
                                        <label class="surveys-filter-group-label">Event Title</label>
                                        <input type="text" class="form-control reg-participant-search surveys-range-input" id="surveysFilterEventTitleSearch" placeholder="Search event title..." value="<%= filterValues.filterEventTitle || '' %>" autocomplete="off">
                                        <div class="reg-search-results" id="surveysFilterEventTitleResults"></div>
                                        <input type="hidden" name="filterEventTitle" id="surveysFilterEventTitleInput" value="<%= filterValues.filterEventTitle || '' %>">
                                    </div>

                                    <!-- Event Type (Icon-based) -->
                                    <div class="surveys-filter-group">
                                        <label class="surveys-filter-group-label">Event Type</label>
                                        <div class="event-labels filter-labels" id="survey-event-type-pills">
                                            <span class="event-label event-label-type-stem filter-pill survey-event-type-pill <%= filterValues.filterEventType ? '' : 'filter-selected' %>" data-event-type="">
                                                <i class="fa-solid fa-sliders"></i>All Types
                                            </span>
                                            <span class="event-label event-label-type-leadership filter-pill survey-event-type-pill <%= filterValues.filterEventType === 'Leadership' ? 'filter-selected' : '' %>" data-event-type="Leadership">
                                                <i class="fa-solid fa-users"></i>Leadership
                                            </span>
                                            <span class="event-label event-label-type-stem filter-pill survey-event-type-pill <%= filterValues.filterEventType === 'STEM' ? 'filter-selected' : '' %>" data-event-type="STEM">
                                                <i class="fa-solid fa-gear"></i>STEM
                                            </span>
                                            <span class="event-label event-label-type-arts filter-pill survey-event-type-pill <%= filterValues.filterEventType === 'Arts' ? 'filter-selected' : '' %>" data-event-type="Arts">
                                                <i class="fa-solid fa-paintbrush"></i>Arts
                                            </span>
                                            <span class="event-label event-label-type-annual-conference filter-pill survey-event-type-pill <%= filterValues.filterEventType === 'Annual Conference' ? 'filter-selected' : '' %>" data-event-type="Annual Conference">
                                                <i class="fa-solid fa-calendar-star"></i>Annual Conference
                                            </span>
                                        </div>
                                        <input type="hidden" name="filterEventType" id="surveyFilterEventTypeInput" value="<%= filterValues.filterEventType || '' %>">
                                    </div>

                                    <!-- Participant Role (Icon-based) -->
                                    <div class="surveys-filter-group">
                                        <label class="surveys-filter-group-label">Participant Role</label>
                                        <div class="event-labels filter-labels" id="survey-role-pills">
                                            <span class="event-label event-label-type-stem filter-pill survey-role-pill" data-role-value="">
                                                <i class="fa-solid fa-sliders"></i>Any
                                            </span>
                                            <span class="event-label event-label-type-leadership filter-pill survey-role-pill <%= filterValues.filterRole === 'a' ? 'filter-selected' : '' %>" data-role-value="a">
                                                <i class="fa-solid fa-user-shield"></i>Admin
                                            </span>
                                            <span class="event-label event-label-type-stem filter-pill survey-role-pill <%= filterValues.filterRole === 'p' ? 'filter-selected' : '' %>" data-role-value="p">
                                                <i class="fa-solid fa-user"></i>Participant
                                            </span>
                                            <span class="event-label event-label-type-leadership filter-pill survey-role-pill <%= filterValues.filterRole === 'v' ? 'filter-selected' : '' %>" data-role-value="v">
                                                <i class="fa-solid fa-users"></i>Volunteer
                                            </span>
                                            <span class="event-label event-label-type-arts filter-pill survey-role-pill <%= filterValues.filterRole === 'd' ? 'filter-selected' : '' %>" data-role-value="d">
                                                <i class="fa-solid fa-hand-holding-dollar"></i>Donor
                                            </span>
                                        </div>
                                        <input type="hidden" name="filterRole" id="surveyFilterRoleInput" value="<%= filterValues.filterRole || '' %>">
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="surveys-filter-actions">
                                    <a href="/surveys<%= searchValue ? '?search=' + encodeURIComponent(searchValue) : '' %>" class="btn btn-outline-secondary surveys-filter-reset-btn">Reset</a>
                                    <button type="submit" class="btn btn-primary surveys-filter-apply-btn">Apply</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="mb-4"></div>
    <% } %>

    <div class="border-bottom mb-4"></div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert"><%= error %></div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success" role="alert"><%= success %></div>
    <% } %>

    <% if (Array.isArray(surveys) && surveys.length) { %>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <% surveys.forEach(function(survey) { %>
                <div class="col">
                    <div class="card h-100 shadow-sm survey-card">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex w-100 justify-content-between align-items-start mb-3">
                                <div class="survey-title-section">
                                    <h5 class="survey-title mb-1"><%= survey.EventName || 'Event' %></h5>
                                    <small class="survey-date">Submitted <%= survey.SurveySubmissionDisplay || 'Date not set' %></small>
                                </div>
                                <% if (isAdmin) { %>
                                    <div class="survey-actions-group">
                                        <button type="button"
                                                class="btn btn-outline-primary survey-edit-btn"
                                                data-survey-id="<%= survey.SurveyID %>"
                                                data-satisfaction="<%= survey.SurveySatisfactionScore %>"
                                                data-usefulness="<%= survey.SurveyUsefulnessScore %>"
                                                data-instructor="<%= survey.SurveyInstructorScore %>"
                                                data-recommendation="<%= survey.SurveyRecommendationScore %>"
                                                data-comments="<%= survey.SurveyComments || '' %>"
                                                data-submission="<%= survey.SurveySubmissionDate ? new Date(survey.SurveySubmissionDate).toISOString().split('T')[0] : '' %>"
                                                data-registration-label="<%= survey.ParticipantFirstName %> <%= survey.ParticipantLastName %> - <%= survey.EventName || 'Event' %> (<%= survey.EventDateDisplay %>)">
                                            <i class="fa-solid fa-pencil"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger survey-delete-btn" 
                                                data-survey-id="<%= survey.SurveyID %>"
                                                data-event="<%= survey.EventName || 'this event' %>">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                        
                                    </div>
                                <% } %>
                            </div>
                            <div class="survey-score-section mb-2">
                                <p class="mb-1 survey-score-label">
                                    <strong>Overall Score:</strong>
                                </p>
                                <p class="mb-0 survey-score-value">
                                    <%= survey.SurveyOverallScoreDisplay %> / 5
                                </p>
                            </div>
                            <div class="survey-participant-info mb-2">
                                <p class="mb-1 survey-participant-label">
                                    <strong>Participant:</strong>
                                </p>
                                <p class="mb-0 survey-participant-name">
                                    <span class="participant-tooltip" data-bs-toggle="tooltip" data-bs-html="true" title="<%= survey.ParticipantFirstName %> <%= survey.ParticipantLastName %><br>Age: <%= typeof survey.ParticipantAge === 'number' ? survey.ParticipantAge : 'N/A' %><br>City: <%= survey.ParticipantCity || 'N/A' %><br>State: <%= survey.ParticipantState || 'N/A' %><br>Interest: <%= survey.ParticipantFieldOfInterest || 'N/A' %><br>Email: <%= survey.ParticipantEmail %>">
                                        <%= survey.ParticipantFirstName %> <%= survey.ParticipantLastName %>
                                    </span>
                                </p>
                            </div>
                            <p class="mb-2 survey-event-date"><strong>Event Date:</strong> <%= survey.EventDateDisplay %></p>
                            <% if (survey.SurveyComments) { %>
                                <p class="text-muted mb-2 survey-comments">"<%= survey.SurveyComments %>"</p>
                            <% } %>
                            <p class="text-muted mb-0 survey-id">Survey ID: <%= survey.SurveyID %> | Registration #<%= survey.RegistrationID %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <% if (typeof totalSurveys !== 'undefined') { %>
            <% const startIndex = totalSurveys > 0 ? ((currentPage - 1) * pageSize + 1) : 0; %>
            <% const endIndex = totalSurveys > 0 ? Math.min(currentPage * pageSize, totalSurveys) : 0; %>
            <div class="mt-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <div>
                    <% if (currentPage > 1) { %>
                        <a href="/surveys?page=<%= currentPage - 1 %><%= searchValue ? '&search=' + encodeURIComponent(searchValue) : '' %><%= filterQueryString %>" class="btn btn-secondary surveys-pagination-btn">&larr; Previous Page</a>
                    <% } %>
                </div>
                <div class="text-muted text-center">
                    Showing <%= startIndex %> - <%= endIndex %> of <%= totalSurveys %> surveys (Page <%= currentPage %> of <%= totalPages %>)
                </div>
                <div class="text-end">
                    <% if (hasNextPage) { %>
                        <a href="/surveys?page=<%= currentPage + 1 %><%= searchValue ? '&search=' + encodeURIComponent(searchValue) : '' %><%= filterQueryString %>" class="btn btn-primary surveys-pagination-btn">Next Page &rarr;</a>
                    <% } %>
                </div>
            </div>
        <% } %>
    <% } else { %>
        <div class="alert alert-info text-center">No surveys found.</div>
    <% } %>
</div>

