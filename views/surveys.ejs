                                            <div class="surveys-range-with-inputs">
                                                <div class="surveys-range-input-group surveys-range-input-group-min">
                                                    <label class="surveys-range-label">Min</label>
                                                    <input type="text" class="form-control surveys-range-input" name="filterMinAge" value="<%= filterValues.filterMinAge || '' %>" placeholder="min">
