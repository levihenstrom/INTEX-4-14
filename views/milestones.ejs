<% pageTitle = 'Milestones'; %>
<% const participantChoices = Array.isArray(participantOptions) ? participantOptions : []; %>
<% const filterValues = filters || {}; %>
<%
    const filterPairs = [];
    function pushFilterPair(key) {
        if (filterValues[key]) {
            filterPairs.push({ key: key, value: filterValues[key] });
        }
    }
    pushFilterPair('filterParticipantID');
    pushFilterPair('filterMilestoneID');
    pushFilterPair('filterStartDate');
    pushFilterPair('filterEndDate');
    pushFilterPair('filterTitle');
    pushFilterPair('filterCategory');
    pushFilterPair('filterMinAge');
    pushFilterPair('filterMaxAge');
    pushFilterPair('filterCity');
    pushFilterPair('filterState');
    pushFilterPair('filterRole');
    pushFilterPair('filterInterest');
    const filterQueryString = filterPairs.length ? '&' + filterPairs.map(function(pair) {
        return pair.key + '=' + encodeURIComponent(pair.value);
    }).join('&') : '';
    const sortQueryString = (typeof sortColumn !== 'undefined' ? '&sort=' + encodeURIComponent(sortColumn) : '') + (typeof sortDir !== 'undefined' ? '&sortDir=' + encodeURIComponent(sortDir) : '');
%>

<div class="milestones-page">
    <!-- Milestones Header -->
    <div class="events-header">
        <h1>MILESTONES</h1>
        <p>Celebrate progress and key achievements. Track the meaningful milestones that mark each participant's journey toward higher education and personal growth.</p>
    </div>

    <!-- Milestone Category Chart -->
    <% if (isAdmin) { %>
        <div class="row mb-4">
            <div class="col-12">
                <div style="position: relative; height: 180px; width: 100%;">
                    <canvas id="milestonesByCategoryChart"></canvas>
                </div>
            </div>
        </div>
    <% } %>

    <% const kpiData = (typeof metrics !== 'undefined' && metrics) ? metrics : {}; %>
    <% const totalKpi = typeof kpiData.total === 'number' ? kpiData.total : (typeof totalMilestones !== 'undefined' ? totalMilestones : 0); %>
    <% const monthKpi = typeof kpiData.month === 'number' ? kpiData.month : 0; %>
    <% const futureKpi = typeof kpiData.future === 'number' ? kpiData.future : 0; %>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100 milestone-kpi-card">
                <div class="card-body">
                    <p class="text-muted text-uppercase small mb-1" style="font-family: 'Montserrat', sans-serif; font-weight: 600; letter-spacing: 1px;">Total Milestones Achieved</p>
                    <h3 class="mb-0" style="font-family: 'DM Serif Display', serif; color: #3A3F3B; font-size: 2rem;"><%= totalKpi %></h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100 milestone-kpi-card">
                <div class="card-body">
                    <p class="text-muted text-uppercase small mb-1" style="font-family: 'Montserrat', sans-serif; font-weight: 600; letter-spacing: 1px;">Milestones Achieved This Month</p>
                    <h3 class="mb-0" style="font-family: 'DM Serif Display', serif; color: #3A3F3B; font-size: 2rem;"><%= monthKpi %></h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100 milestone-kpi-card">
                <div class="card-body">
                    <p class="text-muted text-uppercase small mb-1" style="font-family: 'Montserrat', sans-serif; font-weight: 600; letter-spacing: 1px;">Future Milestones</p>
                    <h3 class="mb-0" style="font-family: 'DM Serif Display', serif; color: #3A3F3B; font-size: 2rem;"><%= futureKpi %></h3>
                </div>
            </div>
        </div>
    </div>

    <% if (isAdmin) { %>
        <div class="milestones-top-bar mb-4">
            <form method="GET" action="/milestones" class="milestones-search-form">
                <% filterPairs.forEach(function(pair) { %>
                    <input type="hidden" name="<%= pair.key %>" value="<%= pair.value %>">
                <% }); %>
                <input type="hidden" name="sort" value="<%= typeof sortColumn !== 'undefined' ? sortColumn : 'MilestoneDate' %>">
                <input type="hidden" name="sortDir" value="<%= typeof sortDir !== 'undefined' ? sortDir : 'desc' %>">
                <input type="hidden" name="page" value="1">
                <div class="milestones-search-input-wrapper">
                    <i class="fa-solid fa-search milestones-search-icon"></i>
                    <input type="text" class="form-control milestones-search-input" name="search" placeholder="Search milestones by title, participant, ID, or date..." value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                </div>
                <% if ((typeof searchTerm !== 'undefined' && searchTerm) || filterPairs.length > 0) { %>
                    <a href="/milestones" class="btn btn-outline-secondary milestones-clear-btn milestones-search-clear-btn">Clear</a>
                <% } %>
            </form>
            <div class="milestones-actions">
                <button type="button" class="btn btn-outline-secondary milestones-filter-btn" data-bs-toggle="collapse" data-bs-target="#milestonesFilterSection" aria-expanded="false" aria-controls="milestonesFilterSection">
                    <i class="fa-solid fa-filter"></i> Filter
                </button>
                <button type="button" class="btn btn-primary milestones-add-btn" data-bs-toggle="modal" data-bs-target="#addMilestoneModal">
                    <i class="fa-solid fa-plus"></i> Add Milestone
                </button>
            </div>
        </div>

        <!-- Collapsible Filters + Sorting Section -->
        <div class="collapse mb-4" id="milestonesFilterSection">
            <div class="row">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Filters & Sorting</h5>
                        </div>
                        <div class="card-body milestones-filter-section">
                            <form method="GET" action="/milestones" id="milestonesFilterForm">
                                <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                                    <input type="hidden" name="search" value="<%= searchTerm %>">
                                <% } %>
                                <input type="hidden" name="page" value="1">
                                
                                <div class="milestones-filter-grid">
                                    <!-- Milestone Date Range -->
                                    <div class="milestones-filter-group">
                                        <label class="milestones-filter-group-label">Milestone Date Range</label>
                                        <div class="milestones-range-controls">
                                            <div class="milestones-range-slider-row">
                                                <div class="milestones-range-input-group">
                                                    <label class="milestones-range-label">From</label>
                                                    <input type="date" class="form-control milestones-range-input" name="filterStartDate" value="<%= filterValues.filterStartDate || '' %>">
                                                </div>
                                                <div class="milestones-range-input-group">
                                                    <label class="milestones-range-label">To</label>
                                                    <input type="date" class="form-control milestones-range-input" name="filterEndDate" value="<%= filterValues.filterEndDate || '' %>">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Location -->
                                    <div class="milestones-filter-group">
                                        <label class="milestones-filter-group-label">Location</label>
                                        <div class="milestones-range-controls">
                                            <div class="milestones-range-slider-row">
                                                <div class="milestones-range-input-group" style="position: relative;">
                                                    <label class="milestones-range-label">City</label>
                                                    <input type="text" class="form-control reg-participant-search milestones-range-input" id="milestonesFilterCitySearch" placeholder="Search city..." value="<%= filterValues.filterCity || '' %>" autocomplete="off">
                                                    <div class="reg-search-results" id="milestonesFilterCityResults"></div>
                                                    <input type="hidden" name="filterCity" id="milestonesFilterCityInput" value="<%= filterValues.filterCity || '' %>">
                                                </div>
                                                <div class="milestones-range-input-group" style="position: relative;">
                                                    <label class="milestones-range-label">State</label>
                                                    <input type="text" class="form-control reg-participant-search milestones-range-input" id="milestonesFilterStateSearch" placeholder="Search state..." value="<%= filterValues.filterState || '' %>" autocomplete="off">
                                                    <div class="reg-search-results" id="milestonesFilterStateResults"></div>
                                                    <input type="hidden" name="filterState" id="milestonesFilterStateInput" value="<%= filterValues.filterState || '' %>">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Age Range -->
                                    <div class="milestones-filter-group">
                                        <label class="milestones-filter-group-label">Age Range</label>
                                        <div class="milestones-range-controls">
                                            <div class="milestones-range-with-inputs">
                                                <div class="milestones-range-input-group milestones-range-input-group-min">
                                                    <label class="milestones-range-label">Min</label>
                                                    <input type="text" class="form-control milestones-range-input" name="filterMinAge" value="<%= filterValues.filterMinAge || '' %>" placeholder="min">
                                                </div>
                                                <div class="milestones-dual-range-wrapper">
                                                    <input type="range" class="milestones-dual-range milestones-dual-range-min" id="ageMinSlider" min="0" max="100" step="1" value="<%= filterValues.filterMinAge ? Math.min(parseInt(filterValues.filterMinAge), 100) : 0 %>">
                                                    <input type="range" class="milestones-dual-range milestones-dual-range-max" id="ageMaxSlider" min="0" max="100" step="1" value="<%= filterValues.filterMaxAge ? Math.min(parseInt(filterValues.filterMaxAge), 100) : 100 %>">
                                                </div>
                                                <div class="milestones-range-input-group milestones-range-input-group-max">
                                                    <label class="milestones-range-label">Max</label>
                                                    <input type="text" class="form-control milestones-range-input" name="filterMaxAge" value="<%= filterValues.filterMaxAge || '' %>" placeholder="max">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Milestone Title -->
                                    <div class="milestones-filter-group" style="position: relative;">
                                        <label class="milestones-filter-group-label">Milestone Title</label>
                                        <input type="text" class="form-control reg-participant-search milestones-range-input" id="milestonesFilterTitleSearch" placeholder="Search title..." value="<%= filterValues.filterTitle || '' %>" autocomplete="off">
                                        <div class="reg-search-results" id="milestonesFilterTitleResults"></div>
                                        <input type="hidden" name="filterTitle" id="milestonesFilterTitleInput" value="<%= filterValues.filterTitle || '' %>">
                                    </div>

                                    <!-- Milestone Category (Icon-based) -->
                                    <div class="milestones-filter-group">
                                        <label class="milestones-filter-group-label">Milestone Category</label>
                                        <div class="event-labels filter-labels" id="milestone-category-pills">
                                            <span class="event-label event-label-type-stem filter-pill milestone-category-pill" data-category-value="">
                                                <i class="fa-solid fa-sliders"></i>Any
                                            </span>
                                            <span class="event-label event-label-type-stem filter-pill milestone-category-pill <%= filterValues.filterCategory === 'Post Secondary Education' ? 'filter-selected' : '' %>" data-category-value="Post Secondary Education">
                                                <i class="fa-solid fa-graduation-cap"></i>Post Secondary Education
                                            </span>
                                            <span class="event-label event-label-type-arts filter-pill milestone-category-pill <%= filterValues.filterCategory === 'Schooling' ? 'filter-selected' : '' %>" data-category-value="Schooling">
                                                <i class="fa-solid fa-school"></i>Schooling
                                            </span>
                                            <span class="event-label event-label-type-leadership filter-pill milestone-category-pill <%= filterValues.filterCategory === 'Award/Certificate' ? 'filter-selected' : '' %>" data-category-value="Award/Certificate">
                                                <i class="fa-solid fa-trophy"></i>Award/Certificate
                                            </span>
                                            <span class="event-label event-label-type-stem filter-pill milestone-category-pill <%= filterValues.filterCategory === 'Internship/Mentorship' ? 'filter-selected' : '' %>" data-category-value="Internship/Mentorship">
                                                <i class="fa-solid fa-handshake"></i>Internship/Mentorship
                                            </span>
                                            <span class="event-label event-label-type-arts filter-pill milestone-category-pill <%= filterValues.filterCategory === 'Project' ? 'filter-selected' : '' %>" data-category-value="Project">
                                                <i class="fa-solid fa-project-diagram"></i>Project
                                            </span>
                                            <span class="event-label event-label-type-annual-conference filter-pill milestone-category-pill <%= filterValues.filterCategory === 'Non-STEAM Job' ? 'filter-selected' : '' %>" data-category-value="Non-STEAM Job">
                                                <i class="fa-solid fa-briefcase"></i>Non-STEAM Job
                                            </span>
                                        </div>
                                        <input type="hidden" name="filterCategory" id="filterCategoryInput" value="<%= filterValues.filterCategory || '' %>">
                                    </div>

                                    <!-- Participant Role (Icon-based) -->
                                    <div class="milestones-filter-group">
                                        <label class="milestones-filter-group-label">Participant Role</label>
                                        <div class="event-labels filter-labels" id="milestone-role-pills">
                                            <span class="event-label event-label-type-stem filter-pill milestone-role-pill" data-role-value="">
                                                <i class="fa-solid fa-sliders"></i>Any
                                            </span>
                                            <span class="event-label event-label-type-leadership filter-pill milestone-role-pill <%= filterValues.filterRole === 'a' ? 'filter-selected' : '' %>" data-role-value="a">
                                                <i class="fa-solid fa-user-shield"></i>Admin
                                            </span>
                                            <span class="event-label event-label-type-stem filter-pill milestone-role-pill <%= filterValues.filterRole === 'p' ? 'filter-selected' : '' %>" data-role-value="p">
                                                <i class="fa-solid fa-user"></i>Participant
                                            </span>
                                        </div>
                                        <input type="hidden" name="filterRole" id="filterRoleInput" value="<%= filterValues.filterRole || '' %>">
                                    </div>

                                    <!-- Field of Interest (Icon-based) -->
                                    <div class="milestones-filter-group">
                                        <label class="milestones-filter-group-label">Field of Interest</label>
                                        <div class="event-labels filter-labels" id="milestone-interest-pills">
                                            <span class="event-label event-label-type-stem filter-pill milestone-interest-pill" data-interest-value="">
                                                <i class="fa-solid fa-sliders"></i>Any
                                            </span>
                                            <span class="event-label event-label-type-stem filter-pill milestone-interest-pill <%= filterValues.filterInterest === 'STEM' ? 'filter-selected' : '' %>" data-interest-value="STEM">
                                                <i class="fa-solid fa-gear"></i>STEM
                                            </span>
                                            <span class="event-label event-label-type-arts filter-pill milestone-interest-pill <%= filterValues.filterInterest === 'Arts' ? 'filter-selected' : '' %>" data-interest-value="Arts">
                                                <i class="fa-solid fa-paintbrush"></i>Arts
                                            </span>
                                            <span class="event-label event-label-type-annual-conference filter-pill milestone-interest-pill <%= filterValues.filterInterest === 'Both' ? 'filter-selected' : '' %>" data-interest-value="Both">
                                                <i class="fa-solid fa-layer-group"></i>Both
                                            </span>
                                        </div>
                                        <input type="hidden" name="filterInterest" id="filterInterestInput" value="<%= filterValues.filterInterest || '' %>">
                                    </div>

                                    <!-- Sorting -->
                                    <div class="milestones-filter-group">
                                        <label class="milestones-filter-group-label">Sorting</label>
                                        <div class="milestones-range-controls">
                                            <div class="milestones-range-slider-row">
                                                <div class="milestones-range-input-group">
                                                    <label class="milestones-range-label">Sort By</label>
                                                    <select class="form-select milestones-range-input" name="sort">
                                                        <option value="MilestoneDate" <%= sortColumn === 'MilestoneDate' ? 'selected' : '' %>>Milestone Date</option>
                                                        <option value="MilestoneTitle" <%= sortColumn === 'MilestoneTitle' ? 'selected' : '' %>>Milestone Title</option>
                                                        <option value="MilestoneCategory" <%= sortColumn === 'MilestoneCategory' ? 'selected' : '' %>>Milestone Category</option>
                                                    </select>
                                                </div>
                                                <div class="milestones-range-input-group">
                                                    <label class="milestones-range-label">Direction</label>
                                                    <select class="form-select milestones-range-input" name="sortDir">
                                                        <option value="desc" <%= sortDir === 'desc' ? 'selected' : '' %>>Descending</option>
                                                        <option value="asc" <%= sortDir === 'asc' ? 'selected' : '' %>>Ascending</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="milestones-filter-actions">
                                    <a href="/milestones<%= typeof searchTerm !== 'undefined' && searchTerm ? '?search=' + encodeURIComponent(searchTerm) : '' %>" class="btn btn-outline-secondary milestones-filter-reset-btn">Reset</a>
                                    <button type="submit" class="btn btn-primary milestones-filter-apply-btn">Apply</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="mb-4"></div>
    <% } %>

    <div class="border-bottom mb-4"></div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert"><%= error %></div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success" role="alert"><%= success %></div>
    <% } %>

    <% if (Array.isArray(milestones) && milestones.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% milestones.forEach(function(milestone) { %>
                <div class="col">
                    <div class="card h-100 shadow-sm milestone-card">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex w-100 justify-content-between align-items-start mb-3">
                                <div class="milestone-title-section">
                                    <h5 class="milestone-title mb-1"><%= milestone.MilestoneTitle %></h5>
                                    <small class="milestone-category"><%= milestone.MilestoneCategory || 'No category' %></small>
                                </div>
                                <% if (isAdmin) { %>
                                    <div class="milestone-actions-group">
                                        <button type="button"
                                                class="btn btn-outline-primary milestone-edit-btn"
                                                data-milestone-id="<%= milestone.MilestoneID %>"
                                                data-title="<%= milestone.MilestoneTitle %>"
                                                data-category="<%= milestone.MilestoneCategory || '' %>"
                                                data-date="<%= milestone.MilestoneDate ? new Date(milestone.MilestoneDate).toISOString().split('T')[0] : '' %>"
                                                data-participant-id="<%= milestone.ParticipantID %>"
                                                data-participant-display="<%= milestone.ParticipantFirstName %> <%= milestone.ParticipantLastName %> (#<%= milestone.ParticipantID %>) - <%= milestone.ParticipantEmail %>">
                                            <i class="fa-solid fa-pencil"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger milestone-delete-btn" 
                                                data-milestone-id="<%= milestone.MilestoneID %>"
                                                data-title="<%= milestone.MilestoneTitle %>">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    
                                    </div>
                                <% } %>
                            </div>
                            <div class="milestone-participant-info mb-2">
                                <p class="mb-1 milestone-participant-label">
                                    <strong>Participant:</strong>
                                </p>
                                <p class="mb-0 milestone-participant-name">
                                    <span class="participant-tooltip" data-bs-toggle="tooltip" data-bs-html="true" title="<%= milestone.ParticipantFirstName %> <%= milestone.ParticipantLastName %><br>Age: <%= typeof milestone.ParticipantAge === 'number' ? milestone.ParticipantAge : 'N/A' %><br>City: <%= milestone.ParticipantCity || 'N/A' %><br>State: <%= milestone.ParticipantState || 'N/A' %><br>Interest: <%= milestone.ParticipantFieldOfInterest || 'N/A' %><br>Email: <%= milestone.ParticipantEmail %>">
                                        <%= milestone.ParticipantFirstName %> <%= milestone.ParticipantLastName %>
                                    </span>
                                </p>
                            </div>
                            <p class="text-muted mb-0 milestone-date"><%= milestone.MilestoneDateDisplay || 'Date not set' %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <% if (typeof totalMilestones !== 'undefined' && typeof currentPage !== 'undefined') { %>
            <% const startIndex = totalMilestones > 0 ? ((currentPage - 1) * pageSize + 1) : 0; %>
            <% const endIndex = totalMilestones > 0 ? Math.min(currentPage * pageSize, totalMilestones) : 0; %>
            <div class="mt-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <div>
                    <% if (currentPage > 1) { %>
                        <a href="/milestones?page=<%= currentPage - 1 %><%= searchTerm ? '&search=' + encodeURIComponent(searchTerm) : '' %><%= filterQueryString %><%= sortQueryString %>" class="btn btn-secondary milestones-pagination-btn">← Previous Page</a>
                    <% } %>
                </div>
                <div class="text-muted text-center">
                    Showing <%= startIndex %> - <%= endIndex %> of <%= totalMilestones %> milestones
                    (Page <%= currentPage %> of <%= totalPages %>)
                </div>
                <div class="text-end">
                    <% if (hasNextPage) { %>
                        <a href="/milestones?page=<%= currentPage + 1 %><%= searchTerm ? '&search=' + encodeURIComponent(searchTerm) : '' %><%= filterQueryString %><%= sortQueryString %>" class="btn btn-primary milestones-pagination-btn">Next Page →</a>
                    <% } %>
                </div>
            </div>
        <% } %>
    <% } else { %>
        <div class="alert alert-info text-center">No milestones found.</div>
    <% } %>
</div>

<% if (isAdmin) { %>
    <div class="modal fade" id="addMilestoneModal" tabindex="-1" aria-labelledby="addMilestoneModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMilestoneModalLabel">Add Milestone</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addMilestoneForm" action="/milestones/add" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="mb-3">
                            <label for="addMilestoneTitle" class="form-label">Milestone Title *</label>
                            <input type="text" class="form-control" id="addMilestoneTitle" name="MilestoneTitle" required>
                        </div>
                        <div class="mb-3">
                            <label for="addMilestoneCategory" class="form-label">Milestone Category</label>
                            <select class="form-select" id="addMilestoneCategory" name="MilestoneCategory">
                                <option value="">Select category</option>
                                <% (milestoneCategories || []).forEach(function(cat) { %>
                                    <option value="<%= cat %>"><%= cat %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="addMilestoneDate" class="form-label">Milestone Date *</label>
                            <input type="date" class="form-control" id="addMilestoneDate" name="MilestoneDate" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Participant *</label>
                            <div style="position: relative;">
                                <input type="text" class="form-control reg-participant-search" id="addMilestoneParticipantSearch" placeholder="Search participants..." autocomplete="off">
                                <div class="reg-search-results" id="addMilestoneParticipantResults"></div>
                            </div>
                            <input type="hidden" id="addMilestoneParticipantId" name="ParticipantID" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary milestones-modal-cancel-btn" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" form="addMilestoneForm" class="btn btn-primary milestones-modal-save-btn">Save Milestone</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editMilestoneModal" tabindex="-1" aria-labelledby="editMilestoneModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editMilestoneModalLabel">Edit Milestone</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editMilestoneForm" action="/milestones/edit" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="MilestoneID" id="editMilestoneId">
                        <div class="mb-3">
                            <label for="editMilestoneTitle" class="form-label">Milestone Title *</label>
                            <input type="text" class="form-control" id="editMilestoneTitle" name="MilestoneTitle" required>
                        </div>
                        <div class="mb-3">
                            <label for="editMilestoneCategory" class="form-label">Milestone Category</label>
                            <select class="form-select" id="editMilestoneCategory" name="MilestoneCategory">
                                <option value="">Select category</option>
                                <% (milestoneCategories || []).forEach(function(cat) { %>
                                    <option value="<%= cat %>"><%= cat %></option>
                                <% }); %>
                            </select>
                        </div>
