    <script>
        // Mobile dropdown toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const dropdownItems = document.querySelectorAll('.nav-item.dropdown');
            
            function isMobile() {
                return window.innerWidth <= 991.98;
            }
            
            dropdownItems.forEach(function(item) {
                const navLink = item.querySelector('.nav-link');
                const dropdownMenu = item.querySelector('.dropdown-menu');
                
                if (isMobile()) {
                    // On mobile: clicking the link text navigates, clicking arrow toggles dropdown
                    navLink.addEventListener('click', function(e) {
                        // Check if click is on the arrow area (right side)
                        const linkRect = navLink.getBoundingClientRect();
                        const clickX = e.clientX;
                        const arrowAreaStart = linkRect.right - 50; // Last 50px is arrow area
                        
                        if (clickX >= arrowAreaStart) {
                            // Clicked on arrow area - toggle dropdown
                            e.preventDefault();
                            e.stopPropagation();
                            
                            const isActive = item.classList.contains('active');
                            
                            // Close all other dropdowns
                            dropdownItems.forEach(function(otherItem) {
                                if (otherItem !== item) {
                                    otherItem.classList.remove('active');
                                }
                            });
                            
                            // Toggle current dropdown
                            item.classList.toggle('active', !isActive);
                        }
                        // Otherwise, let the link navigate normally
                    });
                }
            });
            
            // Close dropdowns when clicking outside (mobile only)
            document.addEventListener('click', function(e) {
                if (isMobile()) {
                    const isClickInside = e.target.closest('.nav-item.dropdown');
                    if (!isClickInside) {
                        dropdownItems.forEach(function(item) {
                            item.classList.remove('active');
                        });
                    }
                }
            });
            
            // Handle window resize
            let resizeTimer;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function() {
                    // Close all dropdowns on resize
                    dropdownItems.forEach(function(item) {
                        item.classList.remove('active');
                    });
                }, 250);
            });
        });
    </script>
